                                        <Setter Target="BeakPolygon.Points" Value="0,0 10,10 20,0"/>
                                        <Setter Target="BeakPolygon.(Grid.Row)" Value="4"/>
                                        <Setter Target="BeakPolygon.(Grid.Column)" Value="2"/>
