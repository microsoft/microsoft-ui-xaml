                                        <Setter Target="BeakPolygon.Margin" Value="{StaticResource TeachingTipBeakPolygonMarginTop}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="TopEdgeAlignedLeft">
                                    <VisualState.Setters>
