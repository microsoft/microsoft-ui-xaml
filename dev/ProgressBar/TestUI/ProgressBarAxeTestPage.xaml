        <muxc:ProgressBar Width="130" IsIndeterminate="True" ShowPaused="True" ShowError="False" />
        <muxc:ProgressBar AutomationProperties.Name="Determined progress" Width="130" Value="40" />
    </StackPanel>
</local:TestPage>
