<local:TestPage
    x:Class="MUXControlsTestApp.ScrollerDynamicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:controlsPrimitives="using:Microsoft.UI.Xaml.Controls.Primitives"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="root" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="7">
            <CheckBox x:Name="chkScrollerProperties" 
                      Content="Scroller Properties" 
                      Checked="ChkScrollerProperties_Checked" 
                      Unchecked="ChkScrollerProperties_Unchecked" 
                      IsChecked="True" 
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkChildProperties" 
                      Content="Child Properties &amp; Events" 
                      Checked="ChkChildProperties_Checked" 
                      Unchecked="ChkChildProperties_Unchecked" 
                      IsChecked="True" 
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkScrollerMethods"
                      Content="Scroller Methods"
                      Checked="ChkScrollerMethods_Checked"
                      Unchecked="ChkScrollerMethods_Unchecked"
                      IsChecked="True"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkScrollerEvents" 
                      Content="Scroller Events" 
                      Checked="ChkScrollerEvents_Checked" 
                      Unchecked="ChkScrollerEvents_Unchecked" 
                      IsChecked="True"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkPageMethods" 
                      Content="Page Methods" 
                      Checked="ChkPageMethods_Checked" 
                      Unchecked="ChkPageMethods_Unchecked" 
                      IsChecked="False"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkScrollerTestHooks" 
                      Content="Scroller Test Hooks"
                      Checked="ChkScrollerTestHooks_Checked" 
                      Unchecked="ChkScrollerTestHooks_Unchecked" 
                      IsChecked="False"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
        </StackPanel>

        <controlsPrimitives:Scroller x:Name="markupScroller" Width="300" Height="500" Grid.Row="1" Margin="1" Background="AliceBlue" VerticalAlignment="Top" ZoomMode="Enabled">
            <Image x:Name="smallImg" Source="Assets/ingredient8.png" Width="900" Height="900"/>
        </controlsPrimitives:Scroller>

        <ScrollViewer x:Name="svScrollerProperties" Grid.Row="1" Grid.Column="1">
            <Grid Margin="2" Background="LightYellow">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Scroller Properties" Grid.Row="0" Grid.ColumnSpan="5" Foreground="Red"/>

                <TextBlock Text="ContentOrientation:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbContentOrientation" Width="105" Margin="1" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                    <ComboBoxItem>Vertical</ComboBoxItem>
                    <ComboBoxItem>Horizontal</ComboBoxItem>
                    <ComboBoxItem>None</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetContentOrientation" Content="G" Margin="1" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetContentOrientation_Click"/>
                <Button x:Name="btnSetContentOrientation" Content="S" Margin="1" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetContentOrientation_Click"/>

                <TextBlock Text="HorizontalScrollMode:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbHorizontalScrollMode" Margin="1" Grid.Row="3" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbHorizontalScrollMode_SelectionChanged">
                    <ComboBoxItem>Auto</ComboBoxItem>
                    <ComboBoxItem>Enabled</ComboBoxItem>
                    <ComboBoxItem>Disabled</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="HorizontalScrollChainingMode:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbHorizontalScrollChainingMode" Margin="1" Grid.Row="4" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbHorizontalScrollChainingMode_SelectionChanged">
                    <ComboBoxItem>Auto</ComboBoxItem>
                    <ComboBoxItem>Always</ComboBoxItem>
                    <ComboBoxItem>Never</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="HorizontalScrollRailingMode:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbHorizontalScrollRailingMode" Margin="1" Grid.Row="5" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbHorizontalScrollRailingMode_SelectionChanged">
                    <ComboBoxItem>Enabled</ComboBoxItem>
                    <ComboBoxItem>Disabled</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="VerticalScrollMode:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbVerticalScrollMode" Margin="1" Grid.Row="6" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbVerticalScrollMode_SelectionChanged">
                    <ComboBoxItem>Auto</ComboBoxItem>
                    <ComboBoxItem>Enabled</ComboBoxItem>
                    <ComboBoxItem>Disabled</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="VerticalScrollChainingMode:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbVerticalScrollChainingMode" Margin="1" Grid.Row="7" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbVerticalScrollChainingMode_SelectionChanged">
                    <ComboBoxItem>Auto</ComboBoxItem>
                    <ComboBoxItem>Always</ComboBoxItem>
                    <ComboBoxItem>Never</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="VerticalScrollRailingMode:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbVerticalScrollRailingMode" Margin="1" Grid.Row="8" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbVerticalScrollRailingMode_SelectionChanged">
                    <ComboBoxItem>Enabled</ComboBoxItem>
                    <ComboBoxItem>Disabled</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="ZoomMode:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbZoomMode" Margin="1" Grid.Row="9" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbZoomMode_SelectionChanged">
                    <ComboBoxItem>Enabled</ComboBoxItem>
                    <ComboBoxItem>Disabled</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="ZoomChainingMode:" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbZoomChainingMode" Margin="1" Grid.Row="10" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbZoomChainingMode_SelectionChanged">
                    <ComboBoxItem>Auto</ComboBoxItem>
                    <ComboBoxItem>Always</ComboBoxItem>
                    <ComboBoxItem>Never</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="InputKind:" Grid.Row="11" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbInputKind" Margin="1" Grid.Row="11" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbInputKind_SelectionChanged">
                    <ComboBoxItem>All</ComboBoxItem>
                    <ComboBoxItem>Touch</ComboBoxItem>
                    <ComboBoxItem>Pen</ComboBoxItem>
                    <ComboBoxItem>MouseWheel</ComboBoxItem>
                    <ComboBoxItem>Touch|MouseWheel</ComboBoxItem>
                    <ComboBoxItem>Touch|Pen</ComboBoxItem>
                    <ComboBoxItem>Pen|MouseWheel</ComboBoxItem>
                    <ComboBoxItem>Touch|Pen|MouseWheel</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Background:" Grid.Row="12" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbBackground" Grid.Row="12" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbBackground_SelectionChanged">
                    <ComboBoxItem>null</ComboBoxItem>
                    <ComboBoxItem>Transparent</ComboBoxItem>
                    <ComboBoxItem>AliceBlue</ComboBoxItem>
                    <ComboBoxItem>Aqua</ComboBoxItem>
                </ComboBox>

                <StackPanel Orientation="Horizontal" Grid.Row="13" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Child (" VerticalAlignment="Center"/>
                    <CheckBox x:Name="chkPreserveProperties" Content="Preserve Props.?" IsChecked="True" VerticalAlignment="Center"/>
                    <TextBlock Text="):" VerticalAlignment="Center"/>
                </StackPanel>
                <ComboBox x:Name="cmbChild" Margin="1" Grid.Row="13" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbChild_SelectionChanged">
                    <ComboBoxItem>null</ComboBoxItem>
                    <ComboBoxItem>Small Image</ComboBoxItem>
                    <ComboBoxItem>Large Image</ComboBoxItem>
                    <ComboBoxItem>Rectangle</ComboBoxItem>
                    <ComboBoxItem>Button</ComboBoxItem>
                    <ComboBoxItem>Border</ComboBoxItem>
                    <ComboBoxItem>PopulatedBorder</ComboBoxItem>
                    <ComboBoxItem>VerticalStackPanel</ComboBoxItem>
                    <ComboBoxItem>TilePanel</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="ManipulationMode:" Grid.Row="14" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollerManipulationMode" Margin="1" Grid.Row="14" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbScrollerManipulationMode_SelectionChanged">
                    <ComboBoxItem>System</ComboBoxItem>
                    <ComboBoxItem>None</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="MinZoomFactor:" Grid.Row="15" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMinZoomFactor" Grid.Row="15" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetMinZoomFactor" Content="G" Margin="1" Grid.Row="15" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetMinZoomFactor_Click"/>
                <Button x:Name="btnSetMinZoomFactor" Content="S" Margin="1" Grid.Row="15" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetMinZoomFactor_Click"/>
                <Button x:Name="btnQueueMinZoomFactor" Content="Q" Margin="1" Grid.Row="15" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueMinZoomFactor_Click"/>

                <TextBlock Text="MaxZoomFactor:" Grid.Row="16" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMaxZoomFactor" Grid.Row="16" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetMaxZoomFactor" Content="G" Margin="1" Grid.Row="16" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetMaxZoomFactor_Click"/>
                <Button x:Name="btnSetMaxZoomFactor" Content="S" Margin="1" Grid.Row="16" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetMaxZoomFactor_Click"/>
                <Button x:Name="btnQueueMaxZoomFactor" Content="Q" Margin="1" Grid.Row="16" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueMaxZoomFactor_Click"/>

                <TextBlock Text="HorizontalOffset:" Grid.Row="17" Grid.Column="0" VerticalAlignment="Center"/>
                <Border BorderThickness="1" BorderBrush="DarkGray" Grid.Row="17" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock x:Name="tblHorizontalOffset" VerticalAlignment="Center" Margin="2"/>
                </Border>
                <Button x:Name="btnGetHorizontalOffset" Content="G" Margin="1" Grid.Row="17" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetHorizontalOffset_Click"/>

                <TextBlock Text="VerticalOffset:" Grid.Row="18" Grid.Column="0" VerticalAlignment="Center"/>
                <Border BorderThickness="1" BorderBrush="DarkGray" Grid.Row="18" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock x:Name="tblVerticalOffset" VerticalAlignment="Center" Margin="2"/>
                </Border>
                <Button x:Name="btnGetVerticalOffset" Content="G" Margin="1" Grid.Row="18" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetVerticalOffset_Click"/>

                <TextBlock Text="ZoomFactor:" Grid.Row="19" Grid.Column="0" VerticalAlignment="Center"/>
                <Border BorderThickness="1" BorderBrush="DarkGray" Grid.Row="19" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock x:Name="tblZoomFactor" VerticalAlignment="Center" Margin="2"/>
                </Border>
                <Button x:Name="btnGetZoomFactor" Content="G" Margin="1" Grid.Row="19" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetZoomFactor_Click"/>

                <TextBlock Text="State:" Grid.Row="20" Grid.Column="0" VerticalAlignment="Center"/>
                <Border BorderThickness="1" BorderBrush="DarkGray" Grid.Row="20" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock x:Name="tblState" VerticalAlignment="Center" Margin="2"/>
                </Border>
                <Button x:Name="btnGetState" Content="G" Margin="1" Grid.Row="20" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetState_Click"/>

                <TextBlock Text="ExtentWidth:" Grid.Row="21" Grid.Column="0" VerticalAlignment="Center"/>
                <Border BorderThickness="1" BorderBrush="DarkGray" Grid.Row="21" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock x:Name="tblExtentWidth" VerticalAlignment="Center" Margin="2"/>
                </Border>
                <Button x:Name="btnGetExtentWidth" Content="G" Margin="1" Grid.Row="21" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetExtentWidth_Click"/>

                <TextBlock Text="ExtentHeight:" Grid.Row="22" Grid.Column="0" VerticalAlignment="Center"/>
                <Border BorderThickness="1" BorderBrush="DarkGray" Grid.Row="22" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock x:Name="tblExtentHeight" VerticalAlignment="Center" Margin="2"/>
                </Border>
                <Button x:Name="btnGetExtentHeight" Content="G" Margin="1" Grid.Row="22" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetExtentHeight_Click"/>

                <TextBlock Text="Width:" Grid.Row="23" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtWidth" Grid.Row="23" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetWidth" Content="G" Margin="1" Grid.Row="23" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetWidth_Click"/>
                <Button x:Name="btnSetWidth" Content="S" Margin="1" Grid.Row="23" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetWidth_Click"/>
                <Button x:Name="btnQueueWidth" Content="Q" Margin="1" Grid.Row="23" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueWidth_Click"/>

                <TextBlock Text="Height:" Grid.Row="24" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtHeight" Grid.Row="24" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetHeight" Content="G" Margin="1" Grid.Row="24" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetHeight_Click"/>
                <Button x:Name="btnSetHeight" Content="S" Margin="1" Grid.Row="24" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetHeight_Click"/>
                <Button x:Name="btnQueueHeight" Content="Q" Margin="1" Grid.Row="24" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueHeight_Click"/>
            </Grid>
        </ScrollViewer>

        <Grid x:Name="grdChildProperties" Grid.Row="1" Grid.Column="2" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Child Properties" Grid.Row="0" Grid.ColumnSpan="5" Foreground="Red"/>

            <TextBlock Text="HorizontalAlignment:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbChildHorizontalAlignment" Margin="1" Grid.Row="1" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbChildHorizontalAlignment_SelectionChanged">
                <ComboBoxItem>Left</ComboBoxItem>
                <ComboBoxItem>Center</ComboBoxItem>
                <ComboBoxItem>Right</ComboBoxItem>
                <ComboBoxItem>Stretch</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="VerticalAlignment:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbChildVerticalAlignment" Margin="1" Grid.Row="2" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbChildVerticalAlignment_SelectionChanged">
                <ComboBoxItem>Top</ComboBoxItem>
                <ComboBoxItem>Center</ComboBoxItem>
                <ComboBoxItem>Bottom</ComboBoxItem>
                <ComboBoxItem>Stretch</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="ManipulationMode:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbChildManipulationMode" Margin="1" Grid.Row="3" Grid.Column="1" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbChildManipulationMode_SelectionChanged">
                <ComboBoxItem>System</ComboBoxItem>
                <ComboBoxItem>None</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="MinWidth:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtChildMinWidth" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            <Button x:Name="btnGetChildMinWidth" Content="G" Margin="1" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetChildMinWidth_Click"/>
            <Button x:Name="btnSetChildMinWidth" Content="S" Margin="1" Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetChildMinWidth_Click"/>
            <Button x:Name="btnQueueChildMinWidth" Content="Q" Margin="1" Grid.Row="4" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueChildMinWidth_Click"/>

            <TextBlock Text="Width:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtChildWidth" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
