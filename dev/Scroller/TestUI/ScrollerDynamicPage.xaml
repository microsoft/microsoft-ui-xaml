            <Button x:Name="btnSetChildMaxWidth" Content="S" Margin="1" Grid.Row="6" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetChildMaxWidth_Click"/>
            <Button x:Name="btnQueueChildMaxWidth" Content="Q" Margin="1" Grid.Row="6" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueChildMaxWidth_Click"/>

            <TextBlock Text="MinHeight:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtChildMinHeight" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            <Button x:Name="btnGetChildMinHeight" Content="G" Margin="1" Grid.Row="7" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetChildMinHeight_Click"/>
            <Button x:Name="btnSetChildMinHeight" Content="S" Margin="1" Grid.Row="7" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetChildMinHeight_Click"/>
            <Button x:Name="btnQueueChildMinHeight" Content="Q" Margin="1" Grid.Row="7" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueChildMinHeight_Click"/>

            <TextBlock Text="Height:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtChildHeight" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            <Button x:Name="btnGetChildHeight" Content="G" Margin="1" Grid.Row="8" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetChildHeight_Click"/>
            <Button x:Name="btnSetChildHeight" Content="S" Margin="1" Grid.Row="8" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetChildHeight_Click"/>
            <Button x:Name="btnQueueChildHeight" Content="Q" Margin="1" Grid.Row="8" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueChildHeight_Click"/>

            <TextBlock Text="MaxHeight:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtChildMaxHeight" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            <Button x:Name="btnGetChildMaxHeight" Content="G" Margin="1" Grid.Row="9" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetChildMaxHeight_Click"/>
            <Button x:Name="btnSetChildMaxHeight" Content="S" Margin="1" Grid.Row="9" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetChildMaxHeight_Click"/>
            <Button x:Name="btnQueueChildMaxHeight" Content="Q" Margin="1" Grid.Row="9" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueChildMaxHeight_Click"/>

            <TextBlock Text="Margin:" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center"/>
