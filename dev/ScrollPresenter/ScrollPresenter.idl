    Both = 3,
};

[WUXC_VERSION_PREVIEW]
[webhosthidden]
enum ScrollingInteractionState
{
    Idle = 0,
    Interaction = 1,
    Inertia = 2,
    Animation = 3,
};

[WUXC_VERSION_PREVIEW]
[webhosthidden]
enum ScrollingScrollMode
{
    Enabled = 0,
    Disabled = 1,
#ifdef USE_SCROLLMODE_AUTO
