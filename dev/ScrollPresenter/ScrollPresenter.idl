enum ScrollingInputKinds
{
    None = 0,
    Touch = 1,
    Pen = 2,
    MouseWheel = 4,
    Keyboard = 8,
    Gamepad = 16,
    All = 255,
};

[WUXC_VERSION_PREVIEW]
[webhosthidden]
enum ScrollingAnimationMode
{ 
