            </ComboBox>

            <TextBlock Text="ManipulationMode:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbContentManipulationMode" Margin="1" Grid.Row="3" Grid.Column="1" 
