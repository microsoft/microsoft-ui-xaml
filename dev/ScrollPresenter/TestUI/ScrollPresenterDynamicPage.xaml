                        <ComboBoxItem>Ignore</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Text="Animation override:" Grid.Column="0" Grid.Row="19" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbOverriddenZoomFactorChangeAnimation" Grid.Column="1" Grid.Row="19" VerticalAlignment="Center" SelectedIndex="0">
