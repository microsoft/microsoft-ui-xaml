                        <ComboBoxItem>Accordion</ComboBoxItem>
                        <ComboBoxItem>Teleportation</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Text="Duration override (msec):" Grid.Column="0" Grid.Row="6" VerticalAlignment="Center"/>
