            <Button x:Name="btnQueueContentMaxWidth" Content="Q" Margin="1" Grid.Row="6" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueContentMaxWidth_Click"/>

            <TextBlock Text="MinHeight:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
