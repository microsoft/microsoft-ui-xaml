                    <TextBlock Text="Animation override:" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbOverriddenOffsetsChangeAnimation" Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" SelectedIndex="0">
