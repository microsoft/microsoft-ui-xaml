                        <TextBox x:Name="txtStockOffsetsChangeDuration" IsReadOnly="True"/>
                        <TextBox x:Name="txtOverriddenOffsetsChangeDuration"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="7">
                        <Button x:Name="btnScrollTo" Content="ScrollTo" Margin="2" Click="BtnScrollTo_Click"/>
                        <Button x:Name="btnScrollBy" Content="ScrollBy" Margin="2" Click="BtnScrollBy_Click"/>
                        <Button x:Name="btnCancelScroll" Content="Cancel" Margin="2" Click="BtnCancelScroll_Click"/>
                    </StackPanel>

                    <TextBlock Text="ScrollFrom Options" Grid.Row="8" Margin="2" Grid.ColumnSpan="2"/>
