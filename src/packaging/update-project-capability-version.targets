<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Target Condition="'$(WinUIVersion)'!=''" Name="UpdatePackageVersion" BeforeTargets="BeforeBuild">
        <PropertyGroup>
            <VersionSpecific>WinUI.$(WinUIVersion)</VersionSpecific> 
        </PropertyGroup>
        <XmlPeek 
            XmlInputPath="$(MSBuildThisFileDirectory)\build\Microsoft.WinUI.ProjectCapabilities.props" 
            Query="/ns:Project/ns:ItemGroup/ns:ProjectCapability[@Id='VersionSpecific']/@Include" 
            Namespaces="&lt;Namespace Prefix='ns' Uri='http://schemas.microsoft.com/developer/msbuild/2003' /&gt;">
            <Output TaskParameter="Result" PropertyName="CurrentVersionSpecific" />
        </XmlPeek>
        <!-- Conditionally update Microsoft.WinUI.ProjectCapabilities.props for incremental builds -->
        <XmlPoke Condition="'$(CurrentVersionSpecific)'!='$(VersionSpecific)'" Value="$(VersionSpecific)" 
            XmlInputPath="$(MSBuildThisFileDirectory)\build\Microsoft.WinUI.ProjectCapabilities.props" 
            Query="/ns:Project/ns:ItemGroup/ns:ProjectCapability[@Id='VersionSpecific']/@Include" 
            Namespaces="&lt;Namespace Prefix='ns' Uri='http://schemas.microsoft.com/developer/msbuild/2003' /&gt;"/>
	</Target>
</Project>