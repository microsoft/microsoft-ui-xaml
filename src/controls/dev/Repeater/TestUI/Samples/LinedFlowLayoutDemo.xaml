<local:TestPage
    x:Class="MUXControlsTestApp.Samples.LinedFlowLayoutDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp">

    <Grid x:Name="root" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition x:Name="cdEvents" Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="5">
            <CheckBox x:Name="chkLinedFlowLayout" 
                      Content="LinedFlowLayout" 
                      Checked="ChkLinedFlowLayout_Checked" 
                      Unchecked="ChkLinedFlowLayout_Unchecked" 
                      IsChecked="True" 
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkLayoutPanel" 
                      Content="LayoutPanel" 
                      Checked="ChkLayoutPanel_Checked" 
                      Unchecked="ChkLayoutPanel_Unchecked" 
                      IsChecked="True" 
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkScrollView"
                      Content="ScrollView"
                      Checked="ChkScrollView_Checked"
                      Unchecked="ChkScrollView_Unchecked"
                      IsChecked="True"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkEvents" 
                      Content="Events" 
                      Checked="ChkEvents_Checked" 
                      Unchecked="ChkEvents_Unchecked" 
                      IsChecked="True"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
        </StackPanel>

        <ScrollView x:Name="scrollView" Height="800" Grid.Row="1" Margin="1" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <LayoutPanel x:Name="layoutPanel" VerticalAlignment="Top">
                <LayoutPanel.Layout>
                    <LinedFlowLayout x:Name="linedFlowLayout"/>
                </LayoutPanel.Layout>
            </LayoutPanel>
        </ScrollView>

        <Canvas x:Name="canvasLinedFlowLayoutLockedItems" Visibility="Collapsed" Grid.Row="1" Margin="1" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

        <ScrollViewer x:Name="svLinedFlowLayout" Grid.Row="1" Grid.Column="1">
            <Grid Background="{ThemeResource SystemListLowColor}" Margin="4,0,4,0" Padding="6"
                  BorderBrush="{ThemeResource SystemChromeGrayColor}" BorderThickness="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="LinedFlowLayout" Grid.ColumnSpan="5" Foreground="Red"/>
                
                <TextBlock Text="LinedFlowLayout Properties" Grid.Row="1" Grid.ColumnSpan="5" Foreground="DarkOrange"/>

                <TextBlock Text="RealizedItemIndexDbg:" Grid.Row="2" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <TextBox x:Name="txtLinedFlowLayoutFirstRealizedItemIndexDbg" Text="-1" IsReadOnly="True" Margin="0,0,4,0"/>
                    <TextBox x:Name="txtLinedFlowLayoutLastRealizedItemIndexDbg" Text="-1" IsReadOnly="True"/>
                </StackPanel>
                <Button x:Name="btnGetLinedFlowLayoutRealizedItemIndexesDbg" Content="G" Margin="1" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutRealizedItemIndexesDbg_Click"/>

                <TextBlock Text="FrozenItemIndexDbg:" Grid.Row="3" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <TextBox x:Name="txtLinedFlowLayoutFirstFrozenItemIndexDbg" Text="-1" IsReadOnly="True" Margin="0,0,4,0"/>
                    <TextBox x:Name="txtLinedFlowLayoutLastFrozenItemIndexDbg" Text="-1" IsReadOnly="True"/>
                </StackPanel>
                <Button x:Name="btnGetLinedFlowLayoutFrozenItemIndexesDbg" Content="G" Margin="1" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutFrozenItemIndexesDbg_Click"/>

                <TextBlock Text="SnappedAverageItemsPerLineDbg:" Grid.Row="4" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutSnappedAverageItemsPerLineDbg" Text="0.0" IsReadOnly="True" MaxWidth="130" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutSnappedAverageItemsPerLineDbg" Content="G" Margin="1" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutSnappedAverageItemsPerLineDbg_Click"/>

                <TextBlock Text="ForcedAvgItemsPerLineDividerDbg:" Grid.Row="5" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutForcedAverageItemsPerLineDividerDbg" Text="0.0" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutForcedAverageItemsPerLineDividerDbg" Content="G" Margin="1" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutForcedAverageItemsPerLineDividerDbg_Click"/>
                <Button x:Name="btnSetLinedFlowLayoutForcedAverageItemsPerLineDividerDbg" Content="S" Margin="1" Grid.Row="5" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLinedFlowLayoutForcedAverageItemsPerLineDividerDbg_Click"/>

                <TextBlock Text="AverageItemAspectRatioDbg:" Grid.Row="6" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutAverageItemAspectRatioDbg" Text="0.0" IsReadOnly="True" MaxWidth="130" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutAverageItemAspectRatioDbg" Content="G" Margin="1" Grid.Row="6" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutAverageItemAspectRatioDbg_Click"/>

                <TextBlock Text="ForcedAvgItemAspectRatioDbg:" Grid.Row="7" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutForcedAverageItemAspectRatioDbg" Text="0.0" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutForcedAverageItemAspectRatioDbg" Content="G" Margin="1" Grid.Row="7" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutForcedAverageItemAspectRatioDbg_Click"/>
                <Button x:Name="btnSetLinedFlowLayoutForcedAverageItemAspectRatioDbg" Content="S" Margin="1" Grid.Row="7" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLinedFlowLayoutForcedAverageItemAspectRatioDbg_Click"/>

                <TextBlock Text="ForcedWrapMultiplierDbg:" Grid.Row="8" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutForcedWrapMultiplierDbg" Text="0.0" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutForcedWrapMultiplierDbg" Content="G" Margin="1" Grid.Row="8" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutForcedWrapMultiplierDbg_Click"/>
                <Button x:Name="btnSetLinedFlowLayoutForcedWrapMultiplierDbg" Content="S" Margin="1" Grid.Row="8" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLinedFlowLayoutForcedWrapMultiplierDbg_Click"/>

                <TextBlock Text="LogItemIndexDbg:" Grid.Row="9" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutLogItemIndexDbg" Text="-1" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutLogItemIndexDbg" Content="G" Margin="1" Grid.Row="9" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutLogItemIndexDbg_Click"/>
                <Button x:Name="btnSetLinedFlowLayoutLogItemIndexDbg" Content="S" Margin="1" Grid.Row="9" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLinedFlowLayoutLogItemIndexDbg_Click"/>

                <TextBlock Text="ActualLineHeight:" Grid.Row="10" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutActualLineHeight" Text="0" Grid.Row="10" Grid.Column="1" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutActualLineHeight" Content="G" Margin="1" Grid.Row="10" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutActualLineHeight_Click"/>

                <TextBlock Text="LineHeight:" Grid.Row="11" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutLineHeight" Text="NaN" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutLineHeight" Content="G" Margin="1" Grid.Row="11" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutLineHeight_Click"/>
                <Button x:Name="btnSetLinedFlowLayoutLineHeight" Content="S" Margin="1" Grid.Row="11" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLinedFlowLayoutLineHeight_Click"/>

                <TextBlock Text="LineSpacing:" Grid.Row="12" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutLineSpacing" Text="0" Grid.Row="12" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutLineSpacing" Content="G" Margin="1" Grid.Row="12" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutLineSpacing_Click"/>
                <Button x:Name="btnSetLinedFlowLayoutLineSpacing" Content="S" Margin="1" Grid.Row="12" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLinedFlowLayoutLineSpacing_Click"/>

                <TextBlock Text="MinItemSpacing:" Grid.Row="13" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutMinItemSpacing" Text="0" Grid.Row="13" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLinedFlowLayoutMinItemSpacing" Content="G" Margin="1" Grid.Row="13" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLinedFlowLayoutMinItemSpacing_Click"/>
                <Button x:Name="btnSetLinedFlowLayoutMinItemSpacing" Content="S" Margin="1" Grid.Row="13" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLinedFlowLayoutMinItemSpacing_Click"/>

                <TextBlock Text="ItemsStretch:" Grid.Row="14" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLinedFlowLayoutItemsStretch" Margin="1" Grid.Row="14" Grid.Column="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbLinedFlowLayoutItemsStretch_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Fill</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="ItemsJustification:" Grid.Row="15" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLinedFlowLayoutItemsJustification" Margin="1" Grid.Row="15" Grid.Column="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbLinedFlowLayoutItemsJustification_SelectionChanged">
                    <ComboBoxItem>Start</ComboBoxItem>
                    <ComboBoxItem>Center</ComboBoxItem>
                    <ComboBoxItem>End</ComboBoxItem>
                    <ComboBoxItem>SpaceAround</ComboBoxItem>
                    <ComboBoxItem>SpaceBetween</ComboBoxItem>
                    <ComboBoxItem>SpaceEvenly</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="LinedFlowLayout Methods" Grid.Row="16" Foreground="DarkOrange" Grid.ColumnSpan="2"/>

                <Button x:Name="btnLayoutInvalidateMeasure" Content="InvalidateMeasure" Margin="1" Grid.Row="17" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Click="BtnLayoutInvalidateMeasure_Click"/>                
                <Button x:Name="btnLayoutInvalidateItemsInfo" Content="InvalidateItemsInfo" Margin="1" Grid.Row="18" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Click="BtnLayoutInvalidateItemsInfo_Click"/>

                <TextBlock Text="Index:" Grid.Row="19" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLinedFlowLayoutItemIndex" Text="0" Margin="1" Grid.Row="19" Grid.Column="1" VerticalAlignment="Center"/>

                <Button x:Name="btnLinedFlowLayoutLockItemToLine" Content="LockItemToLine" Margin="1" Grid.Row="20" Click="BtnLinedFlowLayoutLockItemToLine_Click"/>
                <TextBox x:Name="txtLinedFlowLayoutLockLine" IsReadOnly="True" Margin="1" Grid.Row="20" Grid.Column="1" VerticalAlignment="Center"/>

                <Button x:Name="btnLinedFlowLayoutUnlockItems" Content="UnlockItems" Margin="1" Grid.Row="21" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Click="BtnLinedFlowLayoutUnlockItems_Click"/>

                <CheckBox x:Name="chkLinedFlowLayoutShowLockedItems" Content="Show locked items?" Margin="1" Grid.Row="22" Grid.ColumnSpan="2" Checked="ChkLinedFlowLayoutShowLockedItems_Checked" Unchecked="ChkLinedFlowLayoutShowLockedItems_Unchecked"/>

                <CheckBox x:Name="chkLinedFlowLayoutHandleItemsInfoRequested" Content="Handle ItemsInfoRequested?" IsChecked="True" Margin="1" Grid.Row="23" Grid.ColumnSpan="2" Checked="ChkLinedFlowLayoutHandleItemsInfoRequested_IsCheckedChanged" Unchecked="ChkLinedFlowLayoutHandleItemsInfoRequested_IsCheckedChanged"/>

                <CheckBox x:Name="chkLinedFlowLayoutIsFastPathSupportedDbg" Content="Is fast path supported?" IsChecked="True" Margin="1" Grid.Row="24" Grid.ColumnSpan="6" Checked="ChkLinedFlowLayoutIsFastPathSupportedDbg_IsCheckedChanged" Unchecked="ChkLinedFlowLayoutIsFastPathSupportedDbg_IsCheckedChanged"/>
            </Grid>
        </ScrollViewer>

        <ScrollViewer x:Name="svLayoutPanel" Grid.Row="1" Grid.Column="2">
            <Grid Margin="4,0,4,0" Padding="6"                
                BorderBrush="{ThemeResource SystemChromeGrayColor}" BorderThickness="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="LayoutPanel" Grid.ColumnSpan="5" Foreground="Red"/>

                <TextBlock Text="LayoutPanel Properties" Grid.Row="1" Grid.ColumnSpan="5" Foreground="DarkOrange"/>

                <TextBlock Text="Background:" Grid.Row="2" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLayoutPanelBackground" Margin="1" Grid.Row="2" Grid.Column="1" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="2" SelectionChanged="CmbLayoutPanelBackground_SelectionChanged">
                    <ComboBoxItem>null</ComboBoxItem>
                    <ComboBoxItem>Transparent</ComboBoxItem>
                    <ComboBoxItem>AliceBlue</ComboBoxItem>
                    <ComboBoxItem>Aqua</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="BorderBrush:" Grid.Row="3" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLayoutPanelBorderBrush" Margin="1" Grid.Row="3" Grid.Column="1" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbLayoutPanelBorderBrush_SelectionChanged">
                    <ComboBoxItem>null</ComboBoxItem>
                    <ComboBoxItem>Transparent</ComboBoxItem>
                    <ComboBoxItem>Blue</ComboBoxItem>
                    <ComboBoxItem>Green</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="BorderThickness:" Grid.Row="4" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLayoutPanelBorderThickness" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLayoutPanelBorderThickness" Content="G" Margin="1" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelBorderThickness_Click"/>
                <Button x:Name="btnSetLayoutPanelBorderThickness" Content="S" Margin="1" Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelBorderThickness_Click"/>

                <TextBlock Text="Margin:" Grid.Row="5" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLayoutPanelMargin" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLayoutPanelMargin" Content="G" Margin="1" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelMargin_Click"/>
                <Button x:Name="btnSetLayoutPanelMargin" Content="S" Margin="1" Grid.Row="5" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelMargin_Click"/>

                <TextBlock Text="Padding:" Grid.Row="6" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLayoutPanelPadding" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLayoutPanelPadding" Content="G" Margin="1" Grid.Row="6" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelPadding_Click"/>
                <Button x:Name="btnSetLayoutPanelPadding" Content="S" Margin="1" Grid.Row="6" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelPadding_Click"/>

                <TextBlock Text="Width:" Grid.Row="7" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLayoutPanelWidth" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLayoutPanelWidth" Content="G" Margin="1" Grid.Row="7" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelWidth_Click"/>
                <Button x:Name="btnSetLayoutPanelWidth" Content="S" Margin="1" Grid.Row="7" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelWidth_Click"/>

                <TextBlock Text="Height:" Grid.Row="8" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLayoutPanelHeight" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLayoutPanelHeight" Content="G" Margin="1" Grid.Row="8" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelHeight_Click"/>
                <Button x:Name="btnSetLayoutPanelHeight" Content="S" Margin="1" Grid.Row="8" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelHeight_Click"/>

                <TextBlock Text="MaxWidth:" Grid.Row="9" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLayoutPanelMaxWidth" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLayoutPanelMaxWidth" Content="G" Margin="1" Grid.Row="9" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelMaxWidth_Click"/>
                <Button x:Name="btnSetLayoutPanelMaxWidth" Content="S" Margin="1" Grid.Row="9" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelMaxWidth_Click"/>

                <TextBlock Text="MaxHeight:" Grid.Row="10" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLayoutPanelMaxHeight" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLayoutPanelMaxHeight" Content="G" Margin="1" Grid.Row="10" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelMaxHeight_Click"/>
                <Button x:Name="btnSetLayoutPanelMaxHeight" Content="S" Margin="1" Grid.Row="10" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelMaxHeight_Click"/>

                <TextBlock Text="CornerRadius:" Grid.Row="11" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLayoutPanelCornerRadius" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetLayoutPanelCornerRadius" Content="G" Margin="1" Grid.Row="11" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelCornerRadius_Click"/>
                <Button x:Name="btnSetLayoutPanelCornerRadius" Content="S" Margin="1" Grid.Row="11" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelCornerRadius_Click"/>

                <TextBlock Text="HorizontalAlignment:" Grid.Row="12" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLayoutPanelHorizontalAlignment" Width="115" Margin="1" Grid.Row="12" Grid.Column="1" VerticalAlignment="Center">
                    <ComboBoxItem>Left</ComboBoxItem>
                    <ComboBoxItem>Center</ComboBoxItem>
                    <ComboBoxItem>Right</ComboBoxItem>
                    <ComboBoxItem>Stretch</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetLayoutPanelHorizontalAlignment" Content="G" Margin="1" Grid.Row="12" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelHorizontalAlignment_Click"/>
                <Button x:Name="btnSetLayoutPanelHorizontalAlignment" Content="S" Margin="1" Grid.Row="12" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelHorizontalAlignment_Click"/>

                <TextBlock Text="VerticalAlignment:" Grid.Row="18" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLayoutPanelVerticalAlignment" Width="115" Margin="1" Grid.Row="18" Grid.Column="1" VerticalAlignment="Center">
                    <ComboBoxItem>Top</ComboBoxItem>
                    <ComboBoxItem>Center</ComboBoxItem>
                    <ComboBoxItem>Bottom</ComboBoxItem>
                    <ComboBoxItem>Stretch</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetLayoutPanelVerticalAlignment" Content="G" Margin="1" Grid.Row="18" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutPanelVerticalAlignment_Click"/>
                <Button x:Name="btnSetLayoutPanelVerticalAlignment" Content="S" Margin="1" Grid.Row="18" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutPanelVerticalAlignment_Click"/>

                <Button x:Name="btnLayoutPanelResetLayout" Content="Reset Layout" Margin="1" Grid.Row="19" Grid.ColumnSpan="4" VerticalAlignment="Center" Click="BtnLayoutPanelResetLayout_Click"/>
                <Button x:Name="btnLayoutPanelSetLayout" Content="Set Layout" Margin="1" Grid.Row="20" Grid.ColumnSpan="4" VerticalAlignment="Center" Click="BtnLayoutPanelSetLayout_Click"/>

                <TextBlock Text="LayoutPanel Children" Grid.Row="21" Grid.ColumnSpan="5" Foreground="DarkOrange"/>

                <TextBlock Text="Child Type:" Grid.Row="22" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLayoutPanelElementType" Margin="1" Grid.Row="22" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="0">
                    <ComboBoxItem>Grid</ComboBoxItem>
                    <ComboBoxItem>ItemContainer</ComboBoxItem>
                    <ComboBoxItem>Border</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Set MinWidth:" Grid.Row="23" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Grid.Row="23" Grid.Column="1" Grid.ColumnSpan="3">
                    <CheckBox x:Name="chkSetLayoutPanelElementMinWidth" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1"/>
                    <TextBox x:Name="txtLayoutPanelElementMinWidthAll" Text="100" VerticalAlignment="Center" Margin="1"/>
                </StackPanel>
                
                <TextBlock Text="Set MaxWidth:" Grid.Row="24" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Grid.Row="24" Grid.Column="1" Grid.ColumnSpan="3">
                    <CheckBox x:Name="chkSetLayoutPanelElementMaxWidth" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1"/>
                    <TextBox x:Name="txtLayoutPanelElementMaxWidthAll" Text="100" VerticalAlignment="Center" Margin="1"/>
                </StackPanel>

                <TextBlock Text="Children Count:" Grid.Row="25" VerticalAlignment="Center"/>
                <TextBox x:Name="txtChildrenCount" Text="0" Grid.Row="25" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetChildrenCount" Content="G" Margin="1" Grid.Row="25" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnGetChildrenCount_Click"/>
                <Button x:Name="btnSetChildrenCount" Content="S" Margin="1" Grid.Row="25" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnSetChildrenCount_Click"/>

                <Button x:Name="btnAddChild" Content="Add Child" Margin="1" Grid.Row="26" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnAddChild_Click"/>
                <Button x:Name="btnRemoveAllChildren" Content="Remove All Children" Margin="1" Grid.Row="27" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnRemoveAllChildren_Click"/>

                <TextBlock Text="ChildIndex:" Grid.Row="28" VerticalAlignment="Center" Margin="0, 4, 0, 0"/>
