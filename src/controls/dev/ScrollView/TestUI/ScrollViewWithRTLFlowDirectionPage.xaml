<local:TestPage
    x:Class="MUXControlsTestApp.ScrollViewWithRTLFlowDirectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="rootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <CheckBox x:Name="chkScrollViewFlowDirection" 
                      Content="ScrollView.FlowDirection==RTL?" 
                      Checked="ChkScrollViewFlowDirection_Checked" 
                      Unchecked="ChkScrollViewFlowDirection_Unchecked" 
                      IsChecked="True"
                      IsThreeState="False"
                      Margin="2"/>
            <CheckBox x:Name="chkScrollViewContentFlowDirection" 
                      Content="ScrollView.Content.FlowDirection==RTL?" 
                      Checked="ChkScrollViewContentFlowDirection_Checked" 
                      Unchecked="ChkScrollViewContentFlowDirection_Unchecked" 
                      IsChecked="False"
                      IsThreeState="False"
                      Margin="2"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="MUX ScrollView" Margin="1"/>
            <controls:ScrollView x:Name="muxScrollView" 
                Width="400" Height="400" Margin="2" FlowDirection="RightToLeft"
                Background="Aqua" IsTabStop="True" VerticalAlignment="Top"
                HorizontalScrollMode="Enabled" ZoomMode="Enabled">
                <Image x:Name="muxImg" Source="Assets/ingredient8.png" Width="900" Height="900"/>
            </controls:ScrollView>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock Text="WUX ScrollView" Margin="1"/>
            <ScrollViewer x:Name="wuxScrollViewer" 
                Width="400" Height="400" Margin="2" FlowDirection="RightToLeft"
                Background="Aqua" IsTabStop="True" VerticalAlignment="Top"
                HorizontalScrollBarVisibility="Auto" HorizontalScrollMode="Auto"
                ZoomMode="Enabled">
                <Image x:Name="wuxImg" Source="Assets/ingredient8.png" Width="900" Height="900"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</local:TestPage>
