<local:TestPage
    x:Class="MUXControlsTestApp.ItemsViewSummaryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:localUtilities="using:MUXControlsTestApp.Utilities"
    xmlns:dataModel="using:MUXControlsTestApp.Samples.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <local:TestPage.Resources>
        <DataTemplate x:Key="recipeTemplate1" x:DataType="dataModel:Recipe">
            <ItemContainer MinWidth="72" Height="96" Background="Gray">
                <Grid x:Name="itemPanel">
                    <Image x:Name="image" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image.Source>
                            <BitmapImage DecodePixelHeight="96" UriSource="{Binding ImageUri}"/>
                        </Image.Source>
                    </Image>
                    <TextBlock Text="{Binding Id}" TextWrapping="Wrap" Margin="4" Foreground="Yellow" FontSize="14" MaxWidth="68" MaxHeight="48" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
            </ItemContainer>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate2" x:DataType="dataModel:Recipe">
            <ItemContainer MinWidth="40" MinHeight="40" Background="Gray">
                <Image x:Name="image" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image.Source>
                        <BitmapImage DecodePixelHeight="40" UriSource="{Binding ImageUri}"/>
                    </Image.Source>
                </Image>
            </ItemContainer>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate3" x:DataType="dataModel:Recipe">
            <ItemContainer MinHeight="120" Background="Gray">
                <Image x:Name="image" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image.Source>
                        <BitmapImage UriSource="{Binding ImageUri}"/>
                    </Image.Source>
                </Image>
            </ItemContainer>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate4" x:DataType="dataModel:Recipe">
            <ItemContainer MinWidth="40" Height="120" Background="Gray">
                <Image x:Name="image" Stretch="UniformToFill">
                    <Image.Source>
                        <BitmapImage DecodePixelHeight="120" UriSource="{Binding ImageUri}"/>
                    </Image.Source>
                </Image>
            </ItemContainer>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate5" x:DataType="dataModel:Recipe">
            <ItemContainer Width="100" Height="100">
                <Image x:Name="image" Stretch="UniformToFill">
                    <Image.Source>
                        <BitmapImage DecodePixelHeight="100" UriSource="{Binding ImageUri}"/>
                    </Image.Source>
                </Image>
            </ItemContainer>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate6" x:DataType="dataModel:Recipe">
            <ItemContainer>
                <Grid MinWidth="96" MinHeight="96">
                    <Rectangle Fill="DarkGray"/>
                    <TextBlock Text="{Binding Id}" TextWrapping="Wrap" Foreground="White" FontSize="16" MaxWidth="72" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                </Grid>
            </ItemContainer>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate7" x:DataType="dataModel:Recipe">
            <ItemContainer>
                <Grid MinWidth="126" MinHeight="96">
                    <Rectangle Fill="DarkGray"/>
                    <TextBlock Text="{Binding Id}" TextWrapping="Wrap" Foreground="White" FontSize="16" MaxWidth="72" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                </Grid>
            </ItemContainer>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate8" x:DataType="dataModel:Recipe">
            <Image x:Name="image" MinWidth="40" MinHeight="40" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image.Source>
                    <BitmapImage DecodePixelHeight="40" UriSource="{Binding ImageUri}"/>
                </Image.Source>
            </Image>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate9" x:DataType="dataModel:Recipe">
            <Image x:Name="image" MinWidth="40" Height="120" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image.Source>
                    <BitmapImage DecodePixelHeight="120" UriSource="{Binding ImageUri}"/>
                </Image.Source>
            </Image>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate10" x:DataType="dataModel:Recipe">
            <Image x:Name="image" Width="100" Height="100" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image.Source>
                    <BitmapImage DecodePixelHeight="100" UriSource="{Binding ImageUri}"/>
                </Image.Source>
            </Image>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate11" x:DataType="dataModel:Recipe">
            <Grid CornerRadius="4">
                <Rectangle MinWidth="96" MinHeight="96" Fill="DarkGray"/>
                <TextBlock Text="{Binding Id}" TextWrapping="Wrap" Foreground="White" FontSize="16" MaxWidth="72" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate12" x:DataType="dataModel:Recipe">
            <Grid CornerRadius="4" MinWidth="126" MinHeight="96">
                <Rectangle Fill="DarkGray"/>
                <TextBlock Text="{Binding Id}" TextWrapping="Wrap" Foreground="White" FontSize="16" MaxWidth="72" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate13" x:DataType="dataModel:Recipe">
            <localUtilities:LoggingContentControl UseSystemFocusVisuals="True">
                <StackPanel x:Name="itemPanel">
                    <Image x:Name="image" Width="32" Height="32">
                        <Image.Source>
                            <BitmapImage DecodePixelHeight="32" UriSource="{Binding ImageUri}"/>
                        </Image.Source>
                    </Image>
                    <TextBlock Text="{Binding Description}" Foreground="Yellow" TextWrapping="Wrap" Margin="2" FontSize="8" MaxWidth="48" MaxHeight="48"/>
                </StackPanel>
            </localUtilities:LoggingContentControl>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate14" x:DataType="dataModel:Recipe">
            <localUtilities:LoggingContentControl UseSystemFocusVisuals="True">
                <StackPanel x:Name="itemPanel">
                    <Image x:Name="image" Width="100" Height="100">
                        <Image.Source>
                            <BitmapImage DecodePixelHeight="100" UriSource="{Binding ImageUri}"/>
                        </Image.Source>
                    </Image>
                    <TextBlock Text="{Binding Description}" Foreground="Yellow" TextWrapping="Wrap" Margin="2" FontSize="12" MaxWidth="200"/>
                </StackPanel>
            </localUtilities:LoggingContentControl>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate15" x:DataType="dataModel:Recipe">
            <localUtilities:LoggingContentControl UseSystemFocusVisuals="True">
                <StackPanel x:Name="itemPanel">
                    <Image x:Name="image" Width="192" Height="192">
                        <Image.Source>
                            <BitmapImage DecodePixelHeight="192" UriSource="{Binding ImageUri}"/>
                        </Image.Source>
                    </Image>
                    <TextBlock Text="{Binding Description}" Foreground="Yellow" TextWrapping="Wrap" Margin="2" FontSize="16" MaxWidth="384"/>
                </StackPanel>
            </localUtilities:LoggingContentControl>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate16" x:DataType="dataModel:Recipe">
            <localUtilities:LoggingContentControl UseSystemFocusVisuals="True" MinWidth="32">
                <Border CornerRadius="4" Margin="4" Background="Red">
                    <Image x:Name="image" Stretch="Uniform" Height="92">
                        <Image.Source>
                            <BitmapImage DecodePixelHeight="92" UriSource="{Binding ImageUri}"/>
                        </Image.Source>
                    </Image>
                </Border>
            </localUtilities:LoggingContentControl>
        </DataTemplate>

        <DataTemplate x:Key="recipeTemplate17" x:DataType="dataModel:Recipe">
            <localUtilities:LoggingContentControl UseSystemFocusVisuals="True" MinWidth="32">
                <Grid CornerRadius="4" MinWidth="96" MinHeight="96">
                    <Rectangle Fill="DarkGray"/>
                    <TextBlock Text="{Binding Id}" TextWrapping="Wrap" Foreground="White" FontSize="16" MaxWidth="72" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                </Grid>
            </localUtilities:LoggingContentControl>
        </DataTemplate>

        <StackLayout x:Key="stackLayout"
            Orientation="Vertical" Spacing="10"/>

        <FlowLayout x:Key="flowLayout"
            Orientation="Vertical"
            MinColumnSpacing="10"
            MinRowSpacing="10"/>

        <UniformGridLayout x:Key="uniformGridLayout"
            MaximumRowsOrColumns="4"
            MinColumnSpacing="10" MinRowSpacing="10"
            MinItemWidth="100" MinItemHeight="150"/>

        <LinedFlowLayout x:Key="linedFlowLayout"/>
    </local:TestPage.Resources>
    
    <Grid x:Name="root" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        RowDefinitions="Auto, *, Auto"
        ColumnDefinitions="Auto, Auto, Auto, Auto, *, Auto, Auto">

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="7">
            <CheckBox x:Name="chkItemsViewProperties" 
                      Content="ItemsView Properties" 
                      Checked="ChkItemsViewProperties_Checked" 
                      Unchecked="ChkItemsViewProperties_Unchecked" 
                      IsChecked="True" 
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkChildrenProperties" 
                      Content="Children Properties" 
                      Checked="ChkChildrenProperties_Checked" 
                      Unchecked="ChkChildrenProperties_Unchecked" 
                      IsChecked="True" 
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkItemsViewMethods"
                      Content="ItemsView Methods"
                      Checked="ChkItemsViewMethods_Checked"
                      Unchecked="ChkItemsViewMethods_Unchecked"
                      IsChecked="True"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkLogs" 
                      Content="Logs" 
                      Checked="ChkLogs_Checked" 
                      Unchecked="ChkLogs_Unchecked" 
                      IsChecked="True"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkPageMethods" 
                      Content="Page Methods" 
                      Checked="ChkPageMethods_Checked" 
                      Unchecked="ChkPageMethods_Unchecked" 
                      IsChecked="False"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
            <CheckBox x:Name="chkItemsViewDataSource" 
                      Content="ItemsView Data Source"
                      Checked="ChkItemsViewDataSource_Checked" 
                      Unchecked="ChkItemsViewDataSource_Unchecked" 
                      IsChecked="True"
                      IsThreeState="False"
                      Margin="2,0,0,0"/>
        </StackPanel>

        <ItemsView x:Name="markupItemsView" AutomationProperties.Name="markupItemsView" Width="500" Height="800" Grid.Row="1" Margin="1" VerticalAlignment="Top">
            <ItemsView.ItemTransitionProvider>
                <LinedFlowLayoutItemCollectionTransitionProvider/>
            </ItemsView.ItemTransitionProvider>
        </ItemsView>

        <Canvas x:Name="canvasLinedFlowLayoutLockedItems" Visibility="Collapsed" Width="500" Height="800" Grid.Row="1" Margin="1" VerticalAlignment="Top"/>

        <Border x:Name="bdrCurrentElement" Visibility="Collapsed" BorderBrush="Red" BorderThickness="2" CornerRadius="4" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Rectangle x:Name="rectVerticalKeyboardNavigationReferenceOffset" Visibility="Collapsed" Width="4" Height="800" Fill="Red" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Rectangle x:Name="rectHorizontalKeyboardNavigationReferenceOffset" Visibility="Collapsed" Height="4" Width="500" Fill="Red" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <ScrollViewer x:Name="svItemsViewProperties" Grid.Row="1" Grid.Column="1">
            <Grid Background="{ThemeResource SystemListLowColor}" Margin="4,0,4,0" Padding="6"
                  BorderBrush="{ThemeResource SystemChromeGrayColor}" BorderThickness="1"
                  RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                  ColumnDefinitions="Auto, Auto, Auto, Auto, Auto">

                <TextBlock Text="ItemsView Properties" Grid.ColumnSpan="5" Foreground="Red"/>
                <TextBlock Text="Specific" Grid.Row="1" Grid.ColumnSpan="5" Foreground="DarkOrange"/>

                <TextBlock Text="ItemTemplate:" Grid.Row="2" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbItemTemplate" Width="240" Margin="1" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbItemTemplate_SelectionChanged">
                    <ComboBoxItem>null</ComboBoxItem>
                    <ComboBoxItem>Fixed-Height ItemContainer          (Image + TextBlock)</ComboBoxItem>
                    <ComboBoxItem>ItemContainer                       (Image)</ComboBoxItem>
                    <ComboBoxItem>ItemContainer without MinWidth      (Image)</ComboBoxItem>
                    <ComboBoxItem>Fixed-Height ItemContainer          (Image)</ComboBoxItem>
                    <ComboBoxItem>Square ItemContainer                (Image)</ComboBoxItem>
                    <ComboBoxItem>Lightweight Square ItemContainer    (Rectangle + TextBlock)</ComboBoxItem>
                    <ComboBoxItem>Lightweight Rectangle ItemContainer (Rectangle + TextBlock)</ComboBoxItem>
                    <ComboBoxItem>Image                               (Image)</ComboBoxItem>
                    <ComboBoxItem>Fixed-Height Image                  (Image)</ComboBoxItem>
                    <ComboBoxItem>Square Image                        (Image)</ComboBoxItem>
                    <ComboBoxItem>Lightweight Square                  (Rectangle + TextBlock)</ComboBoxItem>
                    <ComboBoxItem>Lightweight Rectangle               (Rectangle + TextBlock)</ComboBoxItem>
                    <ComboBoxItem>LoggingContentControl               (Small)</ComboBoxItem>
                    <ComboBoxItem>LoggingContentControl               (Medium)</ComboBoxItem>
                    <ComboBoxItem>LoggingContentControl               (Large)</ComboBoxItem>
                    <ComboBoxItem>LoggingContentControl               (Image)</ComboBoxItem>
                    <ComboBoxItem>LoggingContentControl               (Rectangle + TextBlock)</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="ItemsSource:" Grid.Row="3" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbItemsSource" Width="240" Margin="1" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbItemsSource_SelectionChanged">
                    <ComboBoxItem>null</ComboBoxItem>
                    <ComboBoxItem>List&lt;Recipe&gt;</ComboBoxItem>
                    <ComboBoxItem>Small ObservableCollection&lt;Recipe&gt;</ComboBoxItem>
                    <ComboBoxItem>Small Uniform ObservableCollection&lt;Recipe&gt;</ComboBoxItem>
                    <ComboBoxItem>ObservableCollection&lt;Recipe&gt;</ComboBoxItem>
                    <ComboBoxItem>Small ObservableCollection&lt;ItemContainer&gt;</ComboBoxItem>
                    <ComboBoxItem>Small ObservableCollection&lt;Image&gt;</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Layout:" Grid.Row="4" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLayout" Width="240" Margin="1" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="CmbLayout_SelectionChanged">
                    <ComboBoxItem>null</ComboBoxItem>
                    <ComboBoxItem>FlowLayout</ComboBoxItem>
                    <ComboBoxItem>LinedFlowLayout</ComboBoxItem>
                    <ComboBoxItem>StackLayout</ComboBoxItem>
                    <ComboBoxItem>UniformGridLayout</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="SelectionMode:" Grid.Row="5" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbSelectionMode" Width="240" Margin="1" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="CmbSelectionMode_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Single</ComboBoxItem>
                    <ComboBoxItem>Multiple</ComboBoxItem>
                    <ComboBoxItem>Extended</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="CurrentItemIndex:" Grid.Row="6" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCurrentItemIndex" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetCurrentItemIndex" Content="G" Margin="1" Grid.Row="6" Grid.Column="4" VerticalAlignment="Center" Click="BtnGetCurrentItemIndex_Click"/>

                <TextBlock Text="IsItemInvokedEnabled:" Grid.Row="7" VerticalAlignment="Center"/>
                <CheckBox x:Name="chkIsItemInvokedEnabled" 
                      Content="IsItemInvokedEnabled" 
                      Checked="ChkIsItemInvokedEnabled_Checked" 
                      Unchecked="ChkIsItemInvokedEnabled_Unchecked" 
                      IsChecked="False" 
                      IsThreeState="False"
                      Margin="2,0,0,0"
                      Grid.Row="7" 
                      Grid.Column="1" 
                      Grid.ColumnSpan="4"
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Center"/>
                
                <TextBlock Text="Inherited" Grid.Row="8" Grid.ColumnSpan="5" Foreground="DarkOrange"/>

                <TextBlock Text="Background:" Grid.Row="9" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbBackground" Margin="1" Grid.Row="9" Grid.Column="1" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbBackground_SelectionChanged">
                    <ComboBoxItem>null</ComboBoxItem>
                    <ComboBoxItem>Transparent</ComboBoxItem>
                    <ComboBoxItem>AliceBlue</ComboBoxItem>
                    <ComboBoxItem>Aqua</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="BorderBrush:" Grid.Row="10" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbBorderBrush" Margin="1" Grid.Row="10" Grid.Column="1" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbBorderBrush_SelectionChanged">
                    <ComboBoxItem>null</ComboBoxItem>
                    <ComboBoxItem>Transparent</ComboBoxItem>
                    <ComboBoxItem>Blue</ComboBoxItem>
                    <ComboBoxItem>Green</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="BorderThickness:" Grid.Row="11" VerticalAlignment="Center"/>
                <TextBox x:Name="txtBorderThickness" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetBorderThickness" Content="G" Margin="1" Grid.Row="11" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetBorderThickness_Click"/>
                <Button x:Name="btnSetBorderThickness" Content="S" Margin="1" Grid.Row="11" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetBorderThickness_Click"/>

                <TextBlock Text="Margin:" Grid.Row="12" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMargin" Grid.Row="12" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetMargin" Content="G" Margin="1" Grid.Row="12" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetMargin_Click"/>
                <Button x:Name="btnSetMargin" Content="S" Margin="1" Grid.Row="12" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetMargin_Click"/>

                <TextBlock Text="Padding:" Grid.Row="13" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPadding" Grid.Row="13" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetPadding" Content="G" Margin="1" Grid.Row="13" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetPadding_Click"/>
                <Button x:Name="btnSetPadding" Content="S" Margin="1" Grid.Row="13" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetPadding_Click"/>

                <TextBlock Text="Width:" Grid.Row="14" VerticalAlignment="Center"/>
                <TextBox x:Name="txtWidth" Grid.Row="14" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetWidth" Content="G" Margin="1" Grid.Row="14" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetWidth_Click"/>
                <Button x:Name="btnSetWidth" Content="S" Margin="1" Grid.Row="14" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetWidth_Click"/>
                <Button x:Name="btnQueueWidth" Content="Q" Margin="1" Grid.Row="14" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueWidth_Click"/>

                <TextBlock Text="Height:" Grid.Row="15" VerticalAlignment="Center"/>
                <TextBox x:Name="txtHeight" Grid.Row="15" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetHeight" Content="G" Margin="1" Grid.Row="15" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetHeight_Click"/>
                <Button x:Name="btnSetHeight" Content="S" Margin="1" Grid.Row="15" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetHeight_Click"/>
                <Button x:Name="btnQueueHeight" Content="Q" Margin="1" Grid.Row="15" Grid.Column="4" VerticalAlignment="Center" Click="BtnQueueHeight_Click"/>

                <TextBlock Text="MaxWidth:" Grid.Row="16" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMaxWidth" Grid.Row="16" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetMaxWidth" Content="G" Margin="1" Grid.Row="16" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetMaxWidth_Click"/>
                <Button x:Name="btnSetMaxWidth" Content="S" Margin="1" Grid.Row="16" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetMaxWidth_Click"/>

                <TextBlock Text="MaxHeight:" Grid.Row="17" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMaxHeight" Grid.Row="17" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetMaxHeight" Content="G" Margin="1" Grid.Row="17" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetMaxHeight_Click"/>
                <Button x:Name="btnSetMaxHeight" Content="S" Margin="1" Grid.Row="17" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetMaxHeight_Click"/>

                <TextBlock Text="CornerRadius:" Grid.Row="18" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCornerRadius" Grid.Row="18" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetCornerRadius" Content="G" Margin="1" Grid.Row="18" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetCornerRadius_Click"/>
                <Button x:Name="btnSetCornerRadius" Content="S" Margin="1" Grid.Row="18" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetCornerRadius_Click"/>

                <TextBlock Text="TabNavigation:" Grid.Row="19" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbTabNavigation" Margin="1" Grid.Row="19" Grid.Column="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbTabNavigation_SelectionChanged">
                    <ComboBoxItem>Local</ComboBoxItem>
                    <ComboBoxItem>Cycle</ComboBoxItem>
                    <ComboBoxItem>Once</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="XYFocusKeyboardNavigation:" Grid.Row="20" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbXYFocusKeyboardNavigation" Margin="1" Grid.Row="20" Grid.Column="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="CmbXYFocusKeyboardNavigation_SelectionChanged">
                    <ComboBoxItem>Auto</ComboBoxItem>
                    <ComboBoxItem>Enabled</ComboBoxItem>
                    <ComboBoxItem>Disabled</ComboBoxItem>
                </ComboBox>

                <CheckBox x:Name="chkIsEnabled" Content="IsEnabled?" Grid.Row="21" Grid.ColumnSpan="4" Margin="1" Checked="ChkIsEnabled_Checked" Unchecked="ChkIsEnabled_Unchecked"/>
                <CheckBox x:Name="chkIsTabStop" Content="IsTabStop?" Grid.Row="22" Grid.ColumnSpan="4" Margin="1" Checked="ChkIsTabStop_Checked" Unchecked="ChkIsTabStop_Unchecked"/>

                <TextBlock Text="Selection Properties" Grid.Row="23" Grid.ColumnSpan="5" Margin="0,4,0,0" Foreground="Red"/>

                <TextBlock Text="SelectedItem:" Grid.Row="24" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSelectedItem" Grid.Row="24" Grid.Column="1" Grid.ColumnSpan="3" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetSelectedItem" Content="G" Margin="1" Grid.Row="24" Grid.Column="4" VerticalAlignment="Center" Click="BtnGetSelectedItem_Click"/>

                <TextBlock Text="SelectedItems:" Grid.Row="25" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSelectedItems" Grid.Row="25" Grid.Column="1" Grid.ColumnSpan="3" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetSelectedItems" Content="G" Margin="1" Grid.Row="25" Grid.Column="4" VerticalAlignment="Center" Click="BtnGetSelectedItems_Click"/>

                <TextBlock Text="Layout Properties" Grid.Row="26" Grid.ColumnSpan="5" Margin="0,4,0,0" Foreground="Red"/>

                <TextBlock Text="ForcedIndexBasedLayoutOrientation:" Grid.Row="27" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLayoutForcedIndexBasedLayoutOrientation" Grid.Row="27" Grid.Column="1" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="0">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>TopToBottom</ComboBoxItem>
                    <ComboBoxItem>LeftToRight</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetLayoutForcedIndexBasedLayoutOrientation" Content="G" Margin="1" Grid.Row="27" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetLayoutForcedIndexBasedLayoutOrientation_Click"/>
                <Button x:Name="btnSetLayoutForcedIndexBasedLayoutOrientation" Content="S" Margin="1" Grid.Row="27" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetLayoutForcedIndexBasedLayoutOrientation_Click"/>
                <Button x:Name="btnResetLayoutForcedIndexBasedLayoutOrientation" Content="R" Margin="1" Grid.Row="27" Grid.Column="4" VerticalAlignment="Center" Click="BtnResetLayoutForcedIndexBasedLayoutOrientation_Click"/>

                <TextBlock Text="StackLayout" Grid.Row="28" Grid.ColumnSpan="5" Foreground="DarkOrange"/>

                <TextBlock Text="Orientation:" Grid.Row="29" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbStackLayoutOrientation" Grid.Row="29" Grid.Column="1" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <ComboBoxItem>Horizontal</ComboBoxItem>
                    <ComboBoxItem>Vertical</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetStackLayoutOrientation" Content="G" Margin="1" Grid.Row="29" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetStackLayoutOrientation_Click"/>
