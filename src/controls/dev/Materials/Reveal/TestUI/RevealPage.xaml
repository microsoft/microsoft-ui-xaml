<local:TestPage
    x:Class="MUXControlsTestApp.RevealPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="40">
        <Button x:Name="navigateToBasicReveal" AutomationProperties.Name="navigateToBasicReveal" Margin="2" HorizontalAlignment="Stretch">Basic Reveal Tests</Button>
        <Button x:Name="navigateToAdvReveal" AutomationProperties.Name="navigateToAdvReveal" Margin="2" HorizontalAlignment="Stretch">Advance Reveal Tests</Button>
        <Button x:Name="navigateToColorReveal" AutomationProperties.Name="navigateToColorReveal" Margin="2" HorizontalAlignment="Stretch">Reveal Colors</Button>
        <Button x:Name="navigateToSimpleListReveal" AutomationProperties.Name="navigateToSimpleListReveal" Margin="2" HorizontalAlignment="Stretch">Reveal Simple List</Button>
        <Button x:Name="navigateToRevealScenarios" AutomationProperties.Name="navigateToRevealScenarios" Margin="2" HorizontalAlignment="Stretch">Reveal Scenarios</Button>
        <Button x:Name="navigateToRevealFallback" AutomationProperties.Name="navigateToRevealFallback" Margin="2" HorizontalAlignment="Stretch">Reveal Fallback</Button>
        <Button x:Name="navigateToRevealStates" AutomationProperties.Name="navigateToRevealStates" Margin="2" HorizontalAlignment="Stretch">Reveal States</Button>
        <Button x:Name="navigateToRevealRegressionTests" AutomationProperties.Name="navigateToRevealRegressionTests" Margin="2" HorizontalAlignment="Stretch">Reveal Regression Tests</Button>
        <Button x:Name="navigateToCoreWindowEventsTests" AutomationProperties.Name="navigateToCoreWindowEventsTests" Margin="2" HorizontalAlignment="Stretch">CoreWindow Events Tests</Button>
        <Button x:Name="navigateToRevealMarkup" AutomationProperties.Name="navigateToRevealMarkup" Margin="2" HorizontalAlignment="Stretch">Reveal from Markup</Button>
    </StackPanel>
</local:TestPage>
