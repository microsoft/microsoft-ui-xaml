<ResourceDictionary xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:Microsoft.Experimental.UI.Xaml.Controls" xmlns:controls="using:Microsoft.UI.Xaml.Controls" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <Style TargetType="local:SampleControl">
    <Setter Property="Width" Value="123" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:SampleControl">
          <Border Background="Yellow" BorderBrush="Green" BorderThickness="5">
            <StackPanel>
              <TextBlock Text="I am a SampleControl" />
              <controls:SplitButton Content="SplitButton" />
            </StackPanel>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>