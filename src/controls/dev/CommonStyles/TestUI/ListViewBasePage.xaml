<local:TestPage
    x:Class="MUXControlsTestApp.ListViewBasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <local:TestPage.Resources>
        <ItemsPanelTemplate x:Key="virtualizingStackPanelItemsPanelTemplate">
            <VirtualizingStackPanel
                x:Name="virtualizingStackPanel"
                Orientation="Vertical"/>
        </ItemsPanelTemplate>

        <ItemsPanelTemplate x:Key="stackPanelItemsPanelTemplate">
            <StackPanel
                x:Name="stackPanel"
                Orientation="Vertical"/>
        </ItemsPanelTemplate>
    </local:TestPage.Resources>

    <Grid x:Name="rootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="4"
        RowDefinitions="Auto, *, Auto"
        ColumnDefinitions="Auto, Auto, *, *">
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="4">
            <TextBlock x:Name="tblListViewBasePageTitle" FontWeight="Bold" Margin="0,0,2,0" VerticalAlignment="Center"/>
            <CheckBox x:Name="chkProperties" 
                Content="Properties" 
                Checked="ChkListViewBaseProperties_Checked" 
                Unchecked="ChkListViewBaseProperties_Unchecked" 
                IsChecked="True" 
                IsThreeState="False"
                Margin="2,0,0,0"/>
            <CheckBox x:Name="chkDataSource" 
                Content="DataSource"
                Checked="ChkDataSource_Checked"
                Unchecked="ChkDataSource_Unchecked"
                IsChecked="True"
                IsThreeState="False"
                Margin="2,0,0,0"/>
            <CheckBox x:Name="chkLogs" 
                Content="Logs" 
                Checked="ChkLogs_Checked" 
                Unchecked="ChkLogs_Unchecked" 
                IsChecked="True" 
                IsThreeState="False"
                Margin="2,0,0,0"/>
        </StackPanel>

        <ScrollViewer x:Name="svListViewBaseProperties" Grid.Row="1">
            <Grid Background="{ThemeResource SystemListLowColor}" Margin="4,0,4,0" Padding="6"
                BorderBrush="{ThemeResource SystemChromeGrayColor}" BorderThickness="1"
                RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                ColumnDefinitions="Auto, Auto, Auto, Auto">
                <TextBlock Text="ListViewBase Properties" Foreground="Red"/>

                <TextBlock Text="ItemsPanel:" Grid.Row="1" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseItemsPanelType" Width="155" Margin="1" Grid.Row="1" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbListViewBaseItemsPanelType_SelectionChanged">
                    <ComboBoxItem>ModernPanel</ComboBoxItem>
                    <ComboBoxItem>VirtualizingStackPanel</ComboBoxItem>
                    <ComboBoxItem>StackPanel</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="SelectionMode:" Grid.Row="2" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseSelectionMode" Grid.Row="2" Grid.Column="1" Margin="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="1" MinWidth="125">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Single</ComboBoxItem>
                    <ComboBoxItem>Multiple</ComboBoxItem>
                    <ComboBoxItem>Extended</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetListViewBaseSelectionMode" Content="G" Margin="1" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetListViewBaseSelectionMode_Click"/>
                <Button x:Name="btnSetListViewBaseSelectionMode" Content="S" Margin="1" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetListViewBaseSelectionMode_Click"/>

                <TextBlock Text="TabNavigation:" Grid.Row="3" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseTabNavigation" Grid.Row="3" Grid.Column="1" Margin="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="2" MinWidth="125">
                    <ComboBoxItem>Local</ComboBoxItem>
                    <ComboBoxItem>Cycle</ComboBoxItem>
                    <ComboBoxItem>Once</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetListViewBaseTabNavigation" Content="G" Margin="1" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetListViewBaseTabNavigation_Click"/>
                <Button x:Name="btnSetListViewBaseTabNavigation" Content="S" Margin="1" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetListViewBaseTabNavigation_Click"/>

                <TextBlock Text="IsItemClickEnabled:" Grid.Row="4" VerticalAlignment="Center"/>
                <CheckBox x:Name="chkListViewBaseIsItemClickEnabled" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="1"
                    Checked="ChkListViewBaseIsItemClickEnabled_IsCheckedChanged" Unchecked="ChkListViewBaseIsItemClickEnabled_IsCheckedChanged"/>

                <TextBlock Text="SingleSelectionFollowsFocus:" Grid.Row="5" VerticalAlignment="Center"/>
                <CheckBox x:Name="chkListViewBaseSingleSelectionFollowsFocus" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Margin="1"
                    Checked="ChkListViewBaseSingleSelectionFollowsFocus_IsCheckedChanged" Unchecked="ChkListViewBaseSingleSelectionFollowsFocus_IsCheckedChanged"/>

                <TextBlock Text="Header:" Grid.Row="6" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseHeader" Width="155" Margin="1" Grid.Row="6" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbListViewBaseHeader_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Non-focusable</ComboBoxItem>
                    <ComboBoxItem>Focusable</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Footer:" Grid.Row="7" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseFooter" Width="155" Margin="1" Grid.Row="7" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbListViewBaseFooter_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Non-focusable</ComboBoxItem>
                    <ComboBoxItem>Focusable</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="ScrollViewer Properties" Foreground="Red" Margin="0,4,0,0" Grid.Row="8" Grid.ColumnSpan="2"/>

                <TextBlock Text="HorizontalSnapPointsType:" Grid.Row="9" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerHorizontalSnapPointsType" Width="155" Margin="1" Grid.Row="9" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbScrollViewerHorizontalSnapPointsType_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Optional</ComboBoxItem>
                    <ComboBoxItem>Mandatory</ComboBoxItem>
                    <ComboBoxItem>OptionalSingle</ComboBoxItem>
                    <ComboBoxItem>MandatorySingle</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="VerticalSnapPointsType:" Grid.Row="10" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerVerticalSnapPointsType" Width="155" Margin="1" Grid.Row="10" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbScrollViewerVerticalSnapPointsType_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Optional</ComboBoxItem>
                    <ComboBoxItem>Mandatory</ComboBoxItem>
                    <ComboBoxItem>OptionalSingle</ComboBoxItem>
                    <ComboBoxItem>MandatorySingle</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="HorizontalSnapPointsAlignment:" Grid.Row="11" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerHorizontalSnapPointsAlignment" Width="155" Margin="1" Grid.Row="11" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbScrollViewerHorizontalSnapPointsAlignment_SelectionChanged">
                    <ComboBoxItem>Near</ComboBoxItem>
                    <ComboBoxItem>Center</ComboBoxItem>
                    <ComboBoxItem>Far</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="VerticalSnapPointsAlignment:" Grid.Row="12" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerVerticalSnapPointsAlignment" Width="155" Margin="1" Grid.Row="12" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbScrollViewerVerticalSnapPointsAlignment_SelectionChanged">
                    <ComboBoxItem>Near</ComboBoxItem>
                    <ComboBoxItem>Center</ComboBoxItem>
                    <ComboBoxItem>Far</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="ViewportWidth:" Grid.Row="13" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerViewportWidth" IsReadOnly="True" Grid.Row="13" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerViewportWidth" Content="G" Margin="1" Grid.Row="13" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerViewportWidth_Click"/>

                <TextBlock Text="ViewportHeight:" Grid.Row="14" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerViewportHeight" IsReadOnly="True" Grid.Row="14" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerViewportHeight" Content="G" Margin="1" Grid.Row="14" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerViewportHeight_Click"/>

                <TextBlock Text="ExtentWidth:" Grid.Row="15" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerExtentWidth" IsReadOnly="True" Grid.Row="15" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerExtentWidth" Content="G" Margin="1" Grid.Row="15" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerExtentWidth_Click"/>

                <TextBlock Text="ExtentHeight:" Grid.Row="16" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerExtentHeight" IsReadOnly="True" Grid.Row="16" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerExtentHeight" Content="G" Margin="1" Grid.Row="16" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerExtentHeight_Click"/>

                <TextBlock Text="HorizontalOffset:" Grid.Row="17" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerHorizontalOffset" IsReadOnly="True" Grid.Row="17" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerHorizontalOffset" Content="G" Margin="1" Grid.Row="17" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerHorizontalOffset_Click"/>

                <TextBlock Text="VerticalOffset:" Grid.Row="18" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerVerticalOffset" IsReadOnly="True" Grid.Row="18" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerVerticalOffset" Content="G" Margin="1" Grid.Row="18" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerVerticalOffset_Click"/>

                <TextBlock Text="ItemsPanel Properties" Foreground="Red" Margin="0,4,0,0" Grid.Row="19" Grid.ColumnSpan="2"/>

                <TextBlock Text="Orientation:" Grid.Row="20" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbItemsPanelOrientation" Grid.Row="20" Grid.Column="1" Margin="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" MinWidth="125">
                    <ComboBoxItem>Vertical</ComboBoxItem>
                    <ComboBoxItem>Horizontal</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetItemsPanelOrientation" Content="G" Margin="1" Grid.Row="20" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetItemsPanelOrientation_Click"/>
                <Button x:Name="btnSetItemsPanelOrientation" Content="S" Margin="1" Grid.Row="20" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetItemsPanelOrientation_Click"/>

                <TextBlock Text="Margin:" Grid.Row="21" VerticalAlignment="Center"/>
                <TextBox x:Name="txtItemsPanelMargin" Grid.Row="21" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetItemsPanelMargin" Content="G" Margin="1" Grid.Row="21" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetItemsPanelMargin_Click"/>
                <Button x:Name="btnSetItemsPanelMargin" Content="S" Margin="1" Grid.Row="21" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetItemsPanelMargin_Click"/>

                <TextBlock x:Name="tblItemsWrapGridMaximumRowsOrColumns" Text="MaximumRowsOrColumns:" Grid.Row="22" VerticalAlignment="Center"
                    Visibility="Collapsed"/>
                <NumberBox x:Name="nbItemsWrapGridMaximumRowsOrColumns"
                    SpinButtonPlacementMode="Inline"
                    Minimum="1"
                    Maximum ="11"
                    Value="11"
                    Margin="2,1,1,1"
                    Grid.Row="22"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    ValueChanged="NbItemsWrapGridMaximumRowsOrColumns_ValueChanged"/>
            </Grid>
        </ScrollViewer>

        <ScrollViewer x:Name="svDataSource" Grid.Row="1" Grid.Column="1">
            <Grid Margin="4,0,4,0" Padding="6"
                BorderBrush="{ThemeResource SystemChromeGrayColor}" BorderThickness="1"
                RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                ColumnDefinitions="Auto, Auto, Auto, Auto">
                <TextBlock Text="Data Source" Foreground="Red"/>

                <TextBlock Text="ItemCount:" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBox x:Name="txtDataSourceItemCount" Text="0" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnDataSourceGetItemCount" Content="G" Margin="1" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnDataSourceGetItemCount_Click"/>
                <Button x:Name="btnDataSourceSetItemCount" Content="S" Margin="1" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnDataSourceSetItemCount_Click"/>

                <Button x:Name="btnDataSourceAddItem" Content="Add Item" Margin="1" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnDataSourceAddItem_Click"/>
                <Button x:Name="btnDataSourceRemoveAllItems" Content="Remove All Items" Margin="1" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnDataSourceRemoveAllItems_Click"/>

                <TextBlock Text="ItemIndex:" Grid.Row="4" VerticalAlignment="Center" Margin="0, 4, 0, 0"/>
                <TextBox x:Name="txtDataSourceItemIndex" Text="0" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

                <Button x:Name="btnDataSourceReplaceItem" Content="Replace Item" Margin="1, 7, 1, 1" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnDataSourceReplaceItem_Click"/>
                <Button x:Name="btnDataSourceInsertItem" Content="Insert Item" Margin="1" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnDataSourceInsertItem_Click"/>
                <Button x:Name="btnDataSourceRemoveItem" Content="Remove Item" Margin="1" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="BtnDataSourceRemoveItem_Click"/>
            </Grid>
        </ScrollViewer>

        <Grid x:Name="grdLogs" Grid.Row="1" Grid.Column="2" Margin="2"
            RowDefinitions="Auto, Auto, *"
            ColumnDefinitions="*">
            <TextBlock Text="Logs" Foreground="Red"/>

            <Button x:Name="btnClearLogs" Grid.Row="1" Content="Clear" Click="BtnClearLogs_Click" Margin="1"/>
            <ListBox x:Name="lstLogs" Margin="1" Grid.Row="2"/>
        </Grid>

        <GridView x:Name="gridView" Grid.Row="1" Grid.Column="3" Background="Gray"
            ScrollViewer.ZoomMode="Enabled"
            MaxHeight="900"
            Visibility="Collapsed"
            ItemClick="ListViewBase_ItemClick">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid CornerRadius="4">
                        <Image x:Name="image" Width="150" Height="150" Source="{Binding BitmapImage}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Id}" TextWrapping="Wrap" Foreground="White" FontSize="18" MaxWidth="100" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <ListView x:Name="listView" Grid.Row="1" Grid.Column="3" Background="Gray"            
            ScrollViewer.ZoomMode="Enabled"
            MaxHeight="900"
            Visibility="Collapsed"
            ItemClick="ListViewBase_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid CornerRadius="4">
                        <Image x:Name="image" Height="150" Source="{Binding BitmapImage}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Id}" TextWrapping="Wrap" Foreground="White" FontSize="18" MaxWidth="100" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="4">
            <TextBlock Text="Exception Report" VerticalAlignment="Center" Margin="2"/>
            <Button x:Name="btnClearExceptionReport" Content="Clear Exception Report" Click="BtnClearExceptionReport_Click" Margin="2"/>
            <TextBox x:Name="txtExceptionReport" IsReadOnly="True" Margin="2"/>
        </StackPanel>
    </Grid>
</local:TestPage>
