<local:TestPage
    x:Class="MUXControlsTestApp.ListViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="40">
        <Button x:Name="navigateToListView" AutomationProperties.Name="navigateToListView" Margin="2" HorizontalAlignment="Stretch">ListView</Button>
        <Button x:Name="navigateToGroupedListView" AutomationProperties.Name="navigateToGroupedListView" Margin="2" HorizontalAlignment="Stretch">Grouped ListView</Button>
        <Button x:Name="navigateToNestedListViews" AutomationProperties.Name="navigateToNestedListViews" Margin="2" HorizontalAlignment="Stretch">Nested ListViews</Button>
    </StackPanel>
</local:TestPage>
