<local:TestPage
    x:Class="MUXControlsTestApp.GroupedListViewBasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <local:TestPage.Resources>
        <ItemsPanelTemplate x:Key="itemsWrapGridItemsPanelTemplate">
            <ItemsWrapGrid
                x:Name="itemsWrapGrid"
                ItemHeight="150"
                ItemWidth="150"
                MaximumRowsOrColumns="1"
                Orientation="Horizontal"/>
        </ItemsPanelTemplate>

        <ItemsPanelTemplate x:Key="itemsStackPanelItemsPanelTemplate">
            <ItemsStackPanel
                x:Name="itemsStackPanel"
                Orientation="Vertical"/>
        </ItemsPanelTemplate>

        <ItemsPanelTemplate x:Key="virtualizingStackPanelItemsPanelTemplate">
            <VirtualizingStackPanel
                x:Name="virtualizingStackPanel"
                Orientation="Vertical"/>
        </ItemsPanelTemplate>
    </local:TestPage.Resources>

    <Grid x:Name="rootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="4"
        RowDefinitions="Auto, *, Auto"
        ColumnDefinitions="Auto, Auto, *, *">
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="4">
            <TextBlock x:Name="tblGroupedListViewBasePageTitle" FontWeight="Bold" Margin="0,0,2,0" VerticalAlignment="Center"/>
            <CheckBox x:Name="chkProperties" 
                Content="Properties" 
                Checked="ChkProperties_Checked" 
                Unchecked="ChkProperties_Unchecked" 
                IsChecked="True" 
                IsThreeState="False"
                Margin="2,0,0,0"/>
            <CheckBox x:Name="chkDataSource" 
                Content="DataSource" 
                Checked="ChkDataSource_Checked" 
                Unchecked="ChkDataSource_Unchecked" 
                IsChecked="False" 
                IsThreeState="False"
                Margin="2,0,0,0"/>
            <CheckBox x:Name="chkLogs" 
                Content="Logs" 
                Checked="ChkLogs_Checked" 
                Unchecked="ChkLogs_Unchecked" 
                IsChecked="True" 
                IsThreeState="False"
                Margin="2,0,0,0"/>
        </StackPanel>

        <ScrollViewer x:Name="svProperties" Grid.Row="1">
            <Grid Background="{ThemeResource SystemListLowColor}" Margin="4,0,4,0" Padding="6"
                BorderBrush="{ThemeResource SystemChromeGrayColor}" BorderThickness="1"
                RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                ColumnDefinitions="Auto, Auto, Auto, Auto">
                <TextBlock Text="ListViewBase Properties" Foreground="Red" Grid.ColumnSpan="4"/>

                <TextBlock Text="ItemsPanel:" Grid.Row="1" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseItemsPanelType" Width="155" Margin="1" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="CmbListViewBaseItemsPanelType_SelectionChanged">
                    <ComboBoxItem>ItemsWrapGrid</ComboBoxItem>
                    <ComboBoxItem>ItemsStackPanel</ComboBoxItem>
                    <ComboBoxItem>VirtualizingStackPanel</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="SelectionMode:" Grid.Row="2" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseSelectionMode" Grid.Row="2" Grid.Column="1" Margin="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="1" MinWidth="125">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Single</ComboBoxItem>
                    <ComboBoxItem>Multiple</ComboBoxItem>
                    <ComboBoxItem>Extended</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetListViewBaseSelectionMode" Content="G" Margin="1" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetListViewBaseSelectionMode_Click"/>
                <Button x:Name="btnSetListViewBaseSelectionMode" Content="S" Margin="1" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetListViewBaseSelectionMode_Click"/>

                <TextBlock Text="TabNavigation:" Grid.Row="3" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseTabNavigation" Grid.Row="3" Grid.Column="1" Margin="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="2" MinWidth="125">
                    <ComboBoxItem>Local</ComboBoxItem>
                    <ComboBoxItem>Cycle</ComboBoxItem>
                    <ComboBoxItem>Once</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetListViewBaseTabNavigation" Content="G" Margin="1" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetListViewBaseTabNavigation_Click"/>
                <Button x:Name="btnSetListViewBaseTabNavigation" Content="S" Margin="1" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetListViewBaseTabNavigation_Click"/>

                <TextBlock Text="IsItemClickEnabled:" Grid.Row="4" VerticalAlignment="Center"/>
                <CheckBox x:Name="chkListViewBaseIsItemClickEnabled" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="1"
                    Checked="ChkListViewBaseIsItemClickEnabled_IsCheckedChanged" Unchecked="ChkListViewBaseIsItemClickEnabled_IsCheckedChanged"/>

                <TextBlock Text="SingleSelectionFollowsFocus:" Grid.Row="5" VerticalAlignment="Center"/>
                <CheckBox x:Name="chkListViewBaseSingleSelectionFollowsFocus" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Margin="1"
                    Checked="ChkListViewBaseSingleSelectionFollowsFocus_IsCheckedChanged" Unchecked="ChkListViewBaseSingleSelectionFollowsFocus_IsCheckedChanged"/>

                <TextBlock Text="Header:" Grid.Row="6" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseHeader" Width="155" Margin="1" Grid.Row="6" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbListViewBaseHeader_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Non-focusable</ComboBoxItem>
                    <ComboBoxItem>Focusable</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Footer:" Grid.Row="7" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbListViewBaseFooter" Width="155" Margin="1" Grid.Row="7" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbListViewBaseFooter_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Non-focusable</ComboBoxItem>
                    <ComboBoxItem>Focusable</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="ScrollViewer Properties" Foreground="Red" Margin="0,4,0,0" Grid.Row="8" Grid.ColumnSpan="4"/>

                <TextBlock Text="HorizontalScrollMode:" Grid.Row="9" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerHorizontalScrollMode" Grid.Row="9" Grid.Column="1" Margin="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="1" MinWidth="125">
                    <ComboBoxItem>Disabled</ComboBoxItem>
                    <ComboBoxItem>Enabled</ComboBoxItem>
                    <ComboBoxItem>Auto</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetScrollViewerHorizontalScrollMode" Content="G" Margin="1" Grid.Row="9" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerHorizontalScrollMode_Click"/>
                <Button x:Name="btnSetScrollViewerHorizontalScrollMode" Content="S" Margin="1" Grid.Row="9" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetScrollViewerHorizontalScrollMode_Click"/>

                <TextBlock Text="VerticalScrollMode:" Grid.Row="10" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerVerticalScrollMode" Grid.Row="10" Grid.Column="1" Margin="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="1" MinWidth="125">
                    <ComboBoxItem>Disabled</ComboBoxItem>
                    <ComboBoxItem>Enabled</ComboBoxItem>
                    <ComboBoxItem>Auto</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetScrollViewerVerticalScrollMode" Content="G" Margin="1" Grid.Row="10" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerVerticalScrollMode_Click"/>
                <Button x:Name="btnSetScrollViewerVerticalScrollMode" Content="S" Margin="1" Grid.Row="10" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetScrollViewerVerticalScrollMode_Click"/>
                
                <TextBlock Text="HorizontalSnapPointsType:" Grid.Row="11" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerHorizontalSnapPointsType" Width="155" Margin="1" Grid.Row="11" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbScrollViewerHorizontalSnapPointsType_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Optional</ComboBoxItem>
                    <ComboBoxItem>Mandatory</ComboBoxItem>
                    <ComboBoxItem>OptionalSingle</ComboBoxItem>
                    <ComboBoxItem>MandatorySingle</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="VerticalSnapPointsType:" Grid.Row="12" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerVerticalSnapPointsType" Width="155" Margin="1" Grid.Row="12" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbScrollViewerVerticalSnapPointsType_SelectionChanged">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Optional</ComboBoxItem>
                    <ComboBoxItem>Mandatory</ComboBoxItem>
                    <ComboBoxItem>OptionalSingle</ComboBoxItem>
                    <ComboBoxItem>MandatorySingle</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="HorizontalSnapPointsAlignment:" Grid.Row="13" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerHorizontalSnapPointsAlignment" Width="155" Margin="1" Grid.Row="13" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbScrollViewerHorizontalSnapPointsAlignment_SelectionChanged">
                    <ComboBoxItem>Near</ComboBoxItem>
                    <ComboBoxItem>Center</ComboBoxItem>
                    <ComboBoxItem>Far</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="VerticalSnapPointsAlignment:" Grid.Row="14" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbScrollViewerVerticalSnapPointsAlignment" Width="155" Margin="1" Grid.Row="14" Grid.Column="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbScrollViewerVerticalSnapPointsAlignment_SelectionChanged">
                    <ComboBoxItem>Near</ComboBoxItem>
                    <ComboBoxItem>Center</ComboBoxItem>
                    <ComboBoxItem>Far</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="ViewportWidth:" Grid.Row="15" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerViewportWidth" IsReadOnly="True" Grid.Row="15" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerViewportWidth" Content="G" Margin="1" Grid.Row="15" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerViewportWidth_Click"/>

                <TextBlock Text="ViewportHeight:" Grid.Row="16" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerViewportHeight" IsReadOnly="True" Grid.Row="16" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerViewportHeight" Content="G" Margin="1" Grid.Row="16" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerViewportHeight_Click"/>

                <TextBlock Text="ExtentWidth:" Grid.Row="17" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerExtentWidth" IsReadOnly="True" Grid.Row="17" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerExtentWidth" Content="G" Margin="1" Grid.Row="17" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerExtentWidth_Click"/>

                <TextBlock Text="ExtentHeight:" Grid.Row="18" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerExtentHeight" IsReadOnly="True" Grid.Row="18" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerExtentHeight" Content="G" Margin="1" Grid.Row="18" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerExtentHeight_Click"/>

                <TextBlock Text="HorizontalOffset:" Grid.Row="19" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerHorizontalOffset" IsReadOnly="True" Grid.Row="19" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerHorizontalOffset" Content="G" Margin="1" Grid.Row="19" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerHorizontalOffset_Click"/>

                <TextBlock Text="VerticalOffset:" Grid.Row="20" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScrollViewerVerticalOffset" IsReadOnly="True" Grid.Row="20" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetScrollViewerVerticalOffset" Content="G" Margin="1" Grid.Row="20" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetScrollViewerVerticalOffset_Click"/>

                <TextBlock Text="ItemsPanel Properties" Foreground="Red" Margin="0,4,0,0" Grid.Row="21" Grid.ColumnSpan="4"/>

                <TextBlock Text="Orientation:" Grid.Row="22" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbItemsPanelOrientation" Grid.Row="22" Grid.Column="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="1" MinWidth="125">
                    <ComboBoxItem>Vertical</ComboBoxItem>
                    <ComboBoxItem>Horizontal</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetItemsPanelOrientation" Content="G" Margin="1" Grid.Row="22" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetItemsPanelOrientation_Click"/>
                <Button x:Name="btnSetItemsPanelOrientation" Content="S" Margin="1" Grid.Row="22" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetItemsPanelOrientation_Click"/>

                <TextBlock Text="GroupHeaderPlacement:" Grid.Row="23" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbItemsPanelGroupHeaderPlacement" Grid.Row="23" Grid.Column="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedIndex="1" MinWidth="125">
                    <ComboBoxItem>Top</ComboBoxItem>
                    <ComboBoxItem>Left</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnGetItemsPanelGroupHeaderPlacement" Content="G" Margin="1" Grid.Row="23" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetItemsPanelGroupHeaderPlacement_Click"/>
                <Button x:Name="btnSetItemsPanelGroupHeaderPlacement" Content="S" Margin="1" Grid.Row="23" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetItemsPanelGroupHeaderPlacement_Click"/>

                <TextBlock Text="AreStickyGroupHeadersEnabled:" Grid.Row="24" VerticalAlignment="Center"/>
                <CheckBox x:Name="chkItemsPanelAreStickyGroupHeadersEnabled"
                    Checked="ChkItemsPanelAreStickyGroupHeadersEnabled_IsCheckedChanged"
                    Unchecked="ChkItemsPanelAreStickyGroupHeadersEnabled_IsCheckedChanged"
                    IsThreeState="False"
                    Margin="2,0,0,0"
                    Grid.Row="24"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"/>

                <TextBlock Text="Margin:" Grid.Row="25" VerticalAlignment="Center"/>
                <TextBox x:Name="txtItemsPanelMargin" Grid.Row="25" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetItemsPanelMargin" Content="G" Margin="1" Grid.Row="25" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetItemsPanelMargin_Click"/>
                <Button x:Name="btnSetItemsPanelMargin" Content="S" Margin="1" Grid.Row="25" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetItemsPanelMargin_Click"/>

                <TextBlock Text="GroupPadding:" Grid.Row="26" VerticalAlignment="Center"/>
                <TextBox x:Name="txtItemsPanelGroupPadding" Grid.Row="26" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetItemsPanelGroupPadding" Content="G" Margin="1" Grid.Row="26" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetItemsPanelGroupPadding_Click"/>
                <Button x:Name="btnSetItemsPanelGroupPadding" Content="S" Margin="1" Grid.Row="26" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetItemsPanelGroupPadding_Click"/>

                <TextBlock x:Name="tblItemsWrapGridProperties" Text="ItemsWrapGrid Properties" Foreground="Red" Margin="0,4,0,0" Grid.Row="27" Grid.ColumnSpan="4"/>

                <TextBlock x:Name="tblItemsWrapGridMaximumRowsOrColumns" Text="MaximumRowsOrColumns:" Grid.Row="28" VerticalAlignment="Center"/>
                <NumberBox x:Name="nbItemsWrapGridMaximumRowsOrColumns"
                    SpinButtonPlacementMode="Inline"
                    Minimum="1"
                    Maximum ="11"
                    Value="1"
                    Margin="2,0,0,0"
                    Grid.Row="28"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ValueChanged="NbItemsWrapGridMaximumRowsOrColumns_ValueChanged"/>

                <TextBlock x:Name="tblItemsWrapGridItemWidth" Text="ItemWidth:" Grid.Row="29" VerticalAlignment="Center"/>
                <TextBox x:Name="txtItemsWrapGridItemWidth" Grid.Row="29" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetItemsWrapGridItemWidth" Content="G" Margin="1" Grid.Row="29" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetItemsWrapGridItemWidth_Click"/>
                <Button x:Name="btnSetItemsWrapGridItemWidth" Content="S" Margin="1" Grid.Row="29" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetItemsWrapGridItemWidth_Click"/>

                <TextBlock x:Name="tblItemsWrapGridItemHeight" Text="ItemHeight:" Grid.Row="30" VerticalAlignment="Center"/>
                <TextBox x:Name="txtItemsWrapGridItemHeight" Grid.Row="30" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetItemsWrapGridItemHeight" Content="G" Margin="1" Grid.Row="30" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetItemsWrapGridItemHeight_Click"/>
                <Button x:Name="btnSetItemsWrapGridItemHeight" Content="S" Margin="1" Grid.Row="30" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetItemsWrapGridItemHeight_Click"/>

                <TextBlock x:Name="tblItemsWrapGridCacheLength" Text="CacheLength:" Grid.Row="31" VerticalAlignment="Center"/>
                <TextBox x:Name="txtItemsWrapGridCacheLength" Grid.Row="31" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                <Button x:Name="btnGetItemsWrapGridCacheLength" Content="G" Margin="1" Grid.Row="31" Grid.Column="2" VerticalAlignment="Center" Click="BtnGetItemsWrapGridCacheLength_Click"/>
                <Button x:Name="btnSetItemsWrapGridCacheLength" Content="S" Margin="1" Grid.Row="31" Grid.Column="3" VerticalAlignment="Center" Click="BtnSetItemsWrapGridCacheLength_Click"/>
            </Grid>
        </ScrollViewer>

        <ScrollViewer x:Name="svDataSource" Grid.Row="1" Grid.Column="1" Visibility="Collapsed">
            <Grid Margin="4,0,4,0" Padding="6"
                BorderBrush="{ThemeResource SystemChromeGrayColor}" BorderThickness="1"
                RowDefinitions="Auto, Auto, Auto"
                ColumnDefinitions="Auto">
                <TextBlock Text="Data Source" Foreground="Red"/>

                <Button x:Name="btnResetItemsSource" Content="Reset ItemsSource" Margin="1" Grid.Row="1" VerticalAlignment="Center" Click="BtnResetItemsSource_Click"/>
                <Button x:Name="btnSetItemsSource" Content="Set ItemsSource" Margin="1" Grid.Row="2" VerticalAlignment="Center" Click="BtnSetItemsSource_Click"/>
            </Grid>
        </ScrollViewer>

        <Grid x:Name="grdLogs" Grid.Row="1" Grid.Column="2" Margin="2"
            RowDefinitions="Auto, Auto, *"
            ColumnDefinitions="*">
            <TextBlock Text="Logs" Foreground="Red"/>

            <Button x:Name="btnClearLogs" Grid.Row="1" Content="Clear" Click="BtnClearLogs_Click" Margin="1"/>
            <ListBox x:Name="lstLogs" Margin="1" Grid.Row="2"/>
        </Grid>

        <GridView x:Name="gridView" Grid.Row="1" Grid.Column="3" Background="Gray"
            Visibility="Collapsed"
            ScrollViewer.ZoomMode="Enabled"
            ItemClick="ListViewBase_ItemClick">
            <GridView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Height="48" FontSize="18" FontWeight="Bold" Text="{Binding Name}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </GridView.GroupStyle>
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="MinWidth" Value="120"/>
                    <Setter Property="MinHeight" Value="120"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid CornerRadius="4" Background="Gray">
                        <TextBlock FontSize="18" VerticalAlignment="Center" HorizontalTextAlignment="Center" Text="{Binding Id}"/>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <ListView x:Name="listView" Grid.Row="1" Grid.Column="3" Background="Gray"
            Visibility="Collapsed"
            ScrollViewer.ZoomMode="Enabled"
            ItemClick="ListViewBase_ItemClick">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Height="48" FontSize="18" FontWeight="Bold" Text="{Binding Name}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="MinWidth" Value="120"/>
                    <Setter Property="MinHeight" Value="120"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid CornerRadius="4" Background="LightGray">
                        <TextBlock VerticalAlignment="Center" HorizontalTextAlignment="Center" Text="{Binding Id}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="4">
            <TextBlock Text="Exception Report" VerticalAlignment="Center" Margin="2"/>
            <Button x:Name="btnClearExceptionReport" Content="Clear Exception Report" Click="BtnClearExceptionReport_Click" Margin="2"/>
            <TextBox x:Name="txtExceptionReport" IsReadOnly="True" Margin="2"/>
        </StackPanel>
    </Grid>
</local:TestPage>
