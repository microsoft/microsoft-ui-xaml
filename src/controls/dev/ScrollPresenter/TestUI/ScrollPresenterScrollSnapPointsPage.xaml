                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Optional Irregular Snap Point"
                Foreground="Red" Grid.ColumnSpan="2"/>
            <TextBlock Text="Value:" VerticalAlignment="Center"
                Grid.Row="1" Margin="2"/>
