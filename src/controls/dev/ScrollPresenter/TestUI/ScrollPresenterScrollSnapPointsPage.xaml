<local:TestPage
    x:Class="MUXControlsTestApp.ScrollPresenterScrollSnapPointsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:controlsPrimitives="using:Microsoft.UI.Xaml.Controls.Primitives"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="{ThemeResource SystemChromeDisabledLowColor}" Grid.Column="0" Grid.RowSpan="2" Width="300" Height="500" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
            <controlsPrimitives:ScrollPresenter x:Name="markupScrollPresenter" AutomationProperties.Name="markupScrollPresenter" Width="300" Height="500" ZoomMode="Enabled" HorizontalScrollMode="Disabled">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <StackPanel x:Name="stackPanel" Width="280" Height="10000" Orientation="Horizontal" HorizontalAlignment="Left"/>
                    <Grid x:Name="consolidatedView" Width="10" Height="10000" BorderBrush="{ThemeResource SystemChromeDisabledLowColor}" BorderThickness="1,0,0,0"/>
                </StackPanel>
            </controlsPrimitives:ScrollPresenter>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2">
            <Button x:Name="btnRemoveFirst" Content="Remove First" Click="BtnRemoveFirst_Click" ToolTipService.ToolTip="Remove first vertical snap point" Margin="2"/>
            <Button x:Name="btnRemoveAll" Content="Remove All" Click="BtnRemoveAll_Click" ToolTipService.ToolTip="Remove all vertical snap points" Margin="2"/>
        </StackPanel>
        
        <Grid Grid.Column="1" Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Mandatory Irregular Snap Point"
                Foreground="Red" Grid.ColumnSpan="2"/>
            <TextBlock Text="Value:" VerticalAlignment="Center"
                Grid.Row="1" Margin="2"/>
            <TextBox x:Name="txtMISnapPointValue" AutomationProperties.Name="txtMISnapPointValue" Text="50" VerticalAlignment="Center"
                Grid.Row="1" Grid.Column="1" Margin="2"/>
            <TextBlock Text="Alignment:" VerticalAlignment="Center"
                Grid.Row="2" Margin="2"/>
            <ComboBox x:Name="cmbMISnapPointAlignment" AutomationProperties.Name="cmbMISnapPointAlignment" SelectedIndex="0" VerticalAlignment="Center"
                Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2">
                <ComboBoxItem>Near</ComboBoxItem>
                <ComboBoxItem>Center</ComboBoxItem>
                <ComboBoxItem>Far</ComboBoxItem>
            </ComboBox>
            <Button x:Name="btnMIAddSnapPoint" AutomationProperties.Name="btnMIAddSnapPoint" Content="Add Snap Point" Click="BtnMIAddSnapPoint_Click"
                Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="2"/>
        </Grid>

        <!-- Dependent on ApplicableRangeType
        <Grid Grid.Column="1" Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
