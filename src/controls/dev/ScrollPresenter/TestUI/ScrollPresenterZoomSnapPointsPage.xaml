                Grid.Row="4" Margin="2"/>
            <TextBox x:Name="txtORSnapPointStart" AutomationProperties.Name="txtORSnapPointStart" Text="1.5" VerticalAlignment="Center"
                Grid.Row="4" Grid.Column="1" Margin="2"/>
