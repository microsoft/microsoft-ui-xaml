<!-- This is a special MSBuild file that is parsed after everything else when MSBuild detects it in our directory structure. -->
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- TAEF version 10.58.210305002 is built against .NET Standard 2.0, which needs netstandard.dll. -->
  <ItemGroup Condition="'$(IsTestApp)' == 'true'">
    <ReferenceCopyLocalPaths Include="$(FrameworkPathOverride)netstandard.dll" />
  </ItemGroup>
  <Target Name="CopyCreateAppxFile" AfterTargets="Build" Condition="'$(IsTestApp)' == 'true'">
    <ItemGroup>
      <DeploymentFiles Include="$(MSBuildThisFileDirectory)tools\CreateAppxDirectory.ps1" />
      <DeploymentFiles Include="$(MSBuildThisFileDirectory)tools\CreateAppxDirectory.msbuildproj" />
    </ItemGroup>
    <Copy SourceFiles="@(DeploymentFiles)" DestinationFiles="$(OutDir)%(Filename)%(Extension)" SkipUnchangedFiles="True" />
  </Target>
</Project>
